@model AddPageViewModel

<h1 class="fs-3 text_shadow">Добавить страницу</h1>

<hr class="liniya" />

<div class="row">

    <div class="col col-lg-9 col-xl-7 col-xxl-6 d-block mx-auto px-2">

        <div class="card p-2 mt-4">

            <div class="card-body mx-0 p-0">

                <form method="post" enctype="multipart/form-data">

                    @* скрытые  поля *@
                    <div>

                        <input asp-for="PageInfoModelId" type="hidden" value="@Guid.Empty" />
                        <input asp-for="PageIconPath" type="hidden" value="main.xml" />
                        <input asp-for="BrowserConfig" type="hidden" value="main.xml" />
                        <input asp-for="BrowserConfigFolder" type="hidden" value="/main" />
                        <input asp-for="Manifest" type="hidden" value="main.xml" />

                    </div>

                    @* все ошибки ввода данных *@
                    @if (Context.Request.Method == "POST")
                    {
                        <div asp-validation-summary="All" class="text-danger border border-top-0 border-danger mb-3"></div>
                    }

                    @* MVC или RazorPage *@
                    <div class="justify-content-center" aria-describedby="PageAsRazorPageInputHelpBlock">

                        <label asp-for="PageAsRazorPage" class="col-12 col-form-label text-primary fs-5 fw-bold"></label>

                        <div class="form-check-inline">

                            <input class="form-check-input d-inline-block mt-2 me-2" asp-for="PageAsRazorPage" type="radio" id="inlineRadio1" value="false" checked>

                            <label class="form-check-label fs-5 d-inline-block align-top" asp-for="PageAsRazorPage">MVC Page</label>

                        </div>

                        <br class="d-md-none" />

                        <div class="form-check-inline">

                            <input class="form-check-input d-inline-block mt-2 me-2" asp-for="PageAsRazorPage" type="radio" id="inlineRadio2" value="true">

                            <label class="form-check-label fs-5 d-inline-block align-top" asp-for="PageAsRazorPage">Razor Page</label>

                        </div>

                        <div id="PageAsRazorPageInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                тип фреймворка
                            </span>

                        </div>

                        <span asp-validation-for="PageAsRazorPage" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Картинка для страницы *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="ImageFileFormFile"></label>

                        <input id="ImageFormFileInput" class="form-control mt-2 w-50 mx-auto" asp-for="ImageFileFormFile" aria-describedby="ImageFormFileInputHelpBlock" />

                        <div id="PmageFormFileInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                картинка страницы
                            </span>

                        </div>

                        <span asp-validation-for="ImageFileFormFile" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Картинка для фона *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="BackgroundFormFile"></label>

                        <input id="BackgroundFormFileInput" class="form-control mt-2 w-50 mx-auto" asp-for="BackgroundFormFile" aria-describedby="BackgroundFormFileInputHelpBlock" />

                        <div id="BackgroundFormFileInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                фон страницы
                            </span>

                        </div>

                        <span asp-validation-for="BackgroundFormFile" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Выбор области Area *@
                    <div class="row g-2 justify-content-center">

                        <label asp-for="PageArea" class="form-label text-primary fs-5 fw-bold"></label>

                        <div class="col-auto" aria-describedby="PageAreaInputHelpBlock">

                            <select id="AreaInput" asp-for="PageArea" class="form-select">
                                @{
                                    for (int i = 0; i < Model.AreaItems.Count(); i++)
                                    {
                                        <option value="@Model.AreaItems[i]">@Model.AreaItems[i]</option>
                                    }
                                }
                            </select>

                        </div>

                        <div id="PageAreaInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                область «Area»
                            </span>

                        </div>

                        <span asp-validation-for="PageArea" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Выбор контроллера *@
                    <div>

                        <label asp-for="Controller" class="form-label text-primary fs-5 fw-bold"></label>

                        <input id="ControllerInput" class="text-center col-11 col-lg-6" asp-for="Controller" aria-describedby="ControllerInputHelpBlock" />

                        <div id="ControllerInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                Controller для страницы MVC
                            </span>

                        </div>

                        <span asp-validation-for="Controller" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Выбор действия *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="Action"></label>

                        <input id="ActionInput" class="text-center col-11 col-lg-6" asp-for="Action" aria-describedby="ActionInputHelpBlock" />

                        <div id="ActionInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                Action для страницы MVC
                            </span>

                        </div>

                        <span asp-validation-for="Action" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Данные адреса *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="RoutData"></label>

                        <input id="RoutDataInput" class="col-11 text-start" asp-for="RoutData" aria-describedby="RoutDataInputHelpBlock" />

                        <div id="ActionInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                Данные запроса (QweryString)
                            </span>

                        </div>

                        <span asp-validation-for="RoutData" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Адрес для RazorPage *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="PageLoc"></label>

                        <input id="PageLocInput" class="form-control text-center" asp-for="PageLoc" aria-describedby="PageLocInputHelpBlock" />

                        <div id="PageLocInputHelpBlock" class="form-text">

                            <span class="fs-6 text-danger">
                                указывать только для RazorPage
                            </span>

                        </div>

                        <span asp-validation-for="PageLoc" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Псевдоним адреса *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="PagePathNickName"></label>

                        <input id="PagePathNickNameInput" class="form-control text-start" asp-for="PagePathNickName" aria-describedby="PagePathNickNameInputHelpBlock" />

                        <div id="PagePathNickNameInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                альтернативный адрес страницы
                            </span>

                        </div>

                        <span asp-validation-for="PagePathNickName" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Тег «title» *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="PageTitle"></label>

                        <input id="PageTitleInput" class="form-control text-start" asp-for="PageTitle" aria-describedby="PageTitleInputHelpBlock" />

                        <div id="PageTitleInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">тег «title» - </span>
                            <span class="fs-6 text-danger">обязательное поле</span>

                        </div>

                        <span asp-validation-for="PageTitle" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Тег «description» *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="PageDescription"></label>

                        <textarea id="PageDescriptionInput" class="form-control fordetails"
                                  asp-for="PageDescription"
                                  rows="7"
                                  aria-describedby="PageDescriptionInputHelpBlock">

                        </textarea>

                        <div id="PageDescriptionInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">тег «description» - </span>
                            <span class="fs-6 text-danger">обязательное поле</span>

                        </div>

                        <span asp-validation-for="PageDescription" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Тег «keywords» *@
                    <div>

                        <label asp-for="PageKeyWords" class="form-label text-primary fs-5 fw-bold"></label>

                        <textarea id="PageKeyWordsInput" class="form-control fordetails"
                                  asp-for="PageKeyWords"
                                  rows="7"
                                  aria-describedby="PageKeyWordsInputHelpBlock">

                        </textarea>

                        <div id="PageKeyWordsInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">тег «keywords» - </span>
                            <span class="fs-6 text-danger">обязательное поле</span>

                        </div>

                        <span asp-validation-for="PageKeyWords" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Текст заголовка страницы в теге <h1> ... </h1> *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="PageHeading"></label>

                        <input id="PageHeadingInput" class="form-control fs-6 mx-auto w-75" asp-for="PageHeading" aria-describedby="PageHeadingInputHelpBlock" />

                        <div id="PageHeadingInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">текст заголовка страницы</span>
                            <br class="d-md-none" />
                            <span class="fs-6 text-danger"> в теге &lt;h1&gt;... &lt;/h1&gt;</span>

                        </div>

                        <span asp-validation-for="PageHeading" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Картинка заголовка страницы *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="ImagePageHeadingFormFile"></label>

                        <input id="ImagePageHeadingFormFileInput" class="form-control mt-2 w-50 mx-auto" asp-for="ImagePageHeadingFormFile" aria-describedby="ImagePageHeadingFormFileInputHelpBlock" />

                        <div id="ImagePageHeadingInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                картинка под заголовком страницы
                            </span>

                        </div>

                        <span asp-validation-for="ImagePageHeadingFormFile" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Текст страницы в теге <article> ... </article> *@
                    <div>

                        <label asp-for="TextOfPage" class="form-label text-primary fs-5 fw-bold"></label>

                        <textarea id="TextOfPageInput" class="form-control text-start fordetails px-3"
                                  asp-for="TextOfPage"
                                  rows="15"
                                  aria-describedby="TextOfPageInputHelpBlock">
                        </textarea>

                        <div id="TextOfPageInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">текст страницы</span>
                            <br class="d-md-none" />
                            <span class="fs-6 text-danger"> в тэге &lt;article&gt; ... &lt;/article&gt;</span>

                        </div>

                        <span asp-validation-for="TextOfPage" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Текст карточки страницы *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="PageCardText"></label>

                        <input id="PageCardTextInput" class="col-11" asp-for="PageCardText" aria-describedby="PageCardTextInputHelpBlock" />

                        <div id="PageCardTextInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                текст для карточки страницы
                            </span>

                        </div>

                        <span asp-validation-for="PageCardText" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Выбор  og:type *@
                    <div>

                        <label class="col-form-label text-primary fs-5 fw-bold" asp-for="OgType"></label>

                        <select id="OgTypeInput" class="col-8 col-md-4 mb-2" asp-for="OgType" aria-describedby="OgTypeInputHelpBlock">

                            <option value="website" selected>website</option>
                            <option value="movie">movie</option>
                            <option value="article">article</option>
                            <option value="book">book</option>

                        </select>

                        <div id="OgTypeInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">тэг «og:type» - </span>
                            <span class="fs-6 text-danger">обязательное поле</span>

                        </div>

                        <span asp-validation-for="OgType" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Частота изменения страницы *@
                    <div>

                        <label class="col-form-label text-primary fs-5 fw-bold" asp-for="Changefreq"></label>

                        <select id="ChangefreqInput" class="col-8 col-md-4 mb-2" asp-for="Changefreq" aria-describedby="ChangefreqInputHelpBlock">

                            <option value="always">always</option>
                            <option value="hourly">hourly</option>
                            <option value="daily">daily</option>
                            <option value="weekly">weekly</option>
                            <option value="monthly" selected>monthly</option>
                            <option value="yearly">yearly</option>
                            <option value="never">never</option>

                        </select>

                        <div id="ChangefreqInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">Changefreq: частота изменения</span>
                            <br class="d-md-none" />
                            <span class="fs-6 text-danger"> - обязательное поле</span>

                        </div>

                        <span asp-validation-for="Changefreq" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Приоритет страницы *@
                    <div>

                        <label asp-for="Priority" class="col-form-label text-primary fs-5 fw-bold"></label>

                        <select id="PriorityInput" class="col-2 mb-2" asp-for="Priority" aria-describedby="PrioritylInputHelpBlock">

                            <option value="0.0">0.0</option>
                            <option value="0.1">0.1</option>
                            <option value="0.2">0.2</option>
                            <option value="0.3">0.3</option>
                            <option value="0.4">0.4</option>
                            <option value="0.5" selected>0.5</option>
                            <option value="0.6">0.6</option>
                            <option value="0.7">0.7</option>
                            <option value="0.8">0.8</option>
                            <option value="0.9">0.9</option>
                            <option value="1.0">1.0</option>

                        </select>

                        <div id="PrioritylInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">Priority: значимость (от 0.0 до 1.0)</span>
                            <br class="d-md-none" />
                            <span class="fs-6 text-danger"> - обязательное поле</span>

                        </div>

                        <span asp-validation-for="Priority" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Фильтры поиска страницы *@
                    <div>

                        <label asp-for="PageFilter" class="form-label text-primary fs-5 fw-bold"></label>

                        <input id="PageFilterInput" asp-for="PageFilter" class="form-control text-start" aria-describedby="PageFilterInputHelpBlock" />

                        <div id="PageFilterInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">фильтр поиска этой страницы</span>

                        </div>

                        <span asp-validation-for="PageFilter" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @*  Порядок сортировки страницы *@
                    <div class="row g-2 justify-content-center mb-2">

                        <div class="col-auto">
                            <label asp-for="SortOfPage" class="form-label text-primary fs-5"></label>
                        </div>

                        <div class="col-auto">
                            <input id="SortOfPageInput" asp-for="SortOfPage" value="1" class="form-control text-center" aria-describedby="SortOfPageInputHelpBlock" />
                        </div>

                        <div id="SortOfPageInputHelpBlock" class="form-text">
                            <span class="fs-6 text-success">порядок сортировки - </span>
                            <br class="d-inline-block d-md-none" />
                            <span class="fs-6 text-danger">обязательное поле</span>
                        </div>

                        @if (Context.Request.Method == "POST")
                        {
                            <span asp-validation-for="SortOfPage" class="text-danger"></span>
                        }

                    </div>

                    @* Включить ссылки на видео по фильтрам *@
                    <div class="row g-1 justify-content-center">

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="VideoLinks"></label>

                        <div class="col-auto me-3">

                            <input id="VideoLinksTrue" class="form-check-input float-none me-2" asp-for="VideoLinks" type="radio" value="true">

                            <label class="form-check-label" for="VideoLinksTrue">
                                <span class="text-success">включить</span>
                            </label>

                        </div>

                        <div class="col-auto">

                            <input id="VideoLinksFalse" class="form-check-input float-none me-2" asp-for="VideoLinks" type="radio" value="false" checked>

                            <label class="form-check-label" for="VideoLinksFalse">
                                <span class="text-danger">выключить</span>
                            </label>

                        </div>

                        <div id="VideoLinksInputHelpBlock" class="form-text mt-3">

                            <span class="fs-6 text-success">
                                Ссылки на видео по фильтрам
                            </span>

                        </div>

                        <span asp-validation-for="VideoLinks" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Фильтры поиска связанных видео *@
                    <div>

                        <label asp-for="VideoFilterOut" class="form-label text-primary fs-5 fw-bold"></label>

                        <textarea id="VideoFilterOutInput" class="form-control fordetails"
                                  asp-for="VideoFilterOut"
                                  rows="5"
                                  aria-describedby="VideoFilterOutInputHelpBlock">
                        </textarea>

                        <div id="VideoFilterOutInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                фильтры поиска видео
                            </span>

                        </div>

                        <span asp-validation-for="VideoFilterOut" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Включить ссылки на страницы по фильтрам *@
                    <div class="row g-1 justify-content-center">

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="PageLinksByFilters"></label>

                        <div class="col-auto me-3">

                            <input id="PageLinksByFiltersTrue" class="form-check-input float-none me-2" asp-for="PageLinksByFilters" type="radio" value="true">

                            <label class="form-check-label" for="PageLinksByFiltersTrue">
                                <span class="text-success">включить</span>
                            </label>

                        </div>

                        <div class="col-auto">

                            <input id="PageLinksByFiltersFalse" class="form-check-input float-none me-2" asp-for="PageLinksByFilters" type="radio" value="false" checked>

                            <label class="form-check-label" for="PageLinksByFiltersFalse">
                                <span class="text-danger">выключить</span>
                            </label>

                        </div>

                        <div id="PageLinksByFiltersInputHelpBlock" class="form-text mt-3">

                            <span class="fs-6 text-success">
                                ссылки на страницы по фильтрам
                            </span>

                        </div>

                        <span asp-validation-for="PageLinksByFilters" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Фильтры поиска связанных страниц *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="PageFilterOut"></label>

                        <textarea id="PageFilterOutInput" class="form-control fordetails"
                                  asp-for="PageFilterOut"
                                  rows="5"
                                  aria-describedby="PageFilterOutInputHelpBlock">
                        </textarea>

                        <div id="PageFilterOutInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                фильтры поиска страниц
                            </span>

                        </div>

                        <span asp-validation-for="PageFilterOut" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Включить ссылки на страницы по GUID (1) *@
                    <div class="row g-1 justify-content-center">

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="PageLinks"></label>

                        <div class="col-auto me-3">

                            <input id="PageLinksTrue" class="form-check-input float-none me-2" asp-for="PageLinks" type="radio" value="true">

                            <label class="form-check-label" for="PageLinksTrue">
                                <span class="text-success">Включить</span>
                            </label>

                        </div>

                        <div class="col-auto">

                            <input id="PageLinksFalse" class="form-check-input float-none me-2" asp-for="PageLinks" type="radio" value="false" checked>

                            <label class="form-check-label" for="PageLinksFalse">
                                <span class="text-danger">Выключить</span>
                            </label>

                        </div>

                        <div id="PageLinksInputHelpBlock" class="form-text mt-3">

                            <span class="fs-6 text-success">
                                ссылки на страницы по GUID (1)
                            </span>

                        </div>

                        <span asp-validation-for="PageLinks" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Список GUID связанных страниц (1) *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="RefPages"></label>

                        <textarea id="RefPagesInput" class="form-control fordetails"
                                  asp-for="RefPages"
                                  rows="5"
                                  aria-describedby="RefPagesInputHelpBlock">
                        </textarea>

                        <div id="RefPagesInputHelpBlock" class="form-text">

                            <span class="fs-6 text-success">
                                список GUID (1) связанных страниц
                            </span>

                        </div>

                        <span class="text-danger" asp-validation-for="RefPages"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Включить ссылки на страницы по GUID (2) *@
                    <div class="row g-1 justify-content-center">

                        <label class="col-12 form-label text-primary fs-5 fw-bold" asp-for="PageLinks2"></label>

                        <div class="col-auto me-3">

                            <input id="PageLinksTrue2" class="form-check-input float-none me-2" asp-for="PageLinks2" type="radio" value="true">

                            <label class="form-check-labelk" for="PageLinksTrue2">
                                <span class="text-success">Включить</span>
                            </label>

                        </div>

                        <div class="col-auto">

                            <input id="PageLinksFalse2" class="form-check-input float-none me-2" asp-for="PageLinks2" type="radio" value="false" checked>

                            <label class="form-check-label" for="PageLinksFalse2">
                                <span class="text-danger">Выключить</span>
                            </label>

                        </div>

                        <div id="PageLinksInputHelpBlock2" class="form-text mt-3">

                            <span class="fs-6 text-success">
                                ссылки на страницы по GUID (2)
                            </span>

                        </div>

                        <span asp-validation-for="PageLinks2" class="text-danger"></span>

                        <hr class="w-50 mx-auto" />

                    </div>

                    @* Список GUID связанных страниц (2) *@
                    <div>

                        <label class="form-label text-primary fs-5 fw-bold" asp-for="RefPages2"></label>

                        <textarea id="RefPagesInput2" class="form-control fordetails"
