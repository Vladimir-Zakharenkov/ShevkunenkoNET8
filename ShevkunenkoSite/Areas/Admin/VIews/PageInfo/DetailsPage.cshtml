									<button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#PicturesCondition" aria-expanded="true" aria-controls="PicturesCondition">
										<span class="form-label fs-5">Состояние :</span>
									</button>
								</h2>

								<div id="PicturesCondition" class="accordion-collapse collapse" aria-labelledby="headingPicturesCondition" data-bs-parent="#Pictures_accordion">

									<div class="accordion-body accordion-body-nointend text-center">

										@if (Model.PhotoLinks)
										{
											<p class="fs-4 mb-2 text_shadow">
												<span>включено</span>
											</p>
										}
										else
										{
											<p class="fs-4 mb-2 text_shadow">
												<span>выключено</span>
											</p>
										}

									</div>

								</div>

							</div>

							@* Картинки *@
							<div class="accordion-item mb-3 shadw">

								<h2 id="headingPicturesAlbum" class="accordion-header">
									<button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#PicturesAlbum" aria-expanded="true" aria-controls="PicturesAlbum">
										<span class="form-label fs-5">Фотоальбом :</span>
									</button>
								</h2>

								<div id="PicturesAlbum" class="accordion-collapse collapse" aria-labelledby="headingPicturesAlbum" data-bs-parent="#Pictures_accordion">

									<div class="accordion-body accordion-body-nointend text-start">

										@if (!string.IsNullOrEmpty(Model.PhotoFilterOut))
										{
											string[] photoFilterOut = Model.PhotoFilterOut.Split(',', StringSplitOptions.RemoveEmptyEntries);

											@for (int sf = 0; sf < photoFilterOut.Count(); sf++)
											{
												<p class="text-start text_shadow fluid-font-size border-bottom pb-2">
													# @photoFilterOut[sf]
												</p>
											}

											<p class="fs-6 form-text text-success text-center">
												<span class="d-sm-none">
													фильтры поиска
												</span>
												<span class="d-none d-sm-inline">
													фильтры поиска картинок
												</span>
											</p>
										}
										else
										{
											<p class="fs-6 form-text text-success text-center">
												нет фильтров картинок
											</p>
										}

									</div>

								</div>

							</div>

						</div>

					</div>

				</div>

			</div>

		</div>

		@* Управление страницей *@
		<div class="card-footer border p-0 my-2">

			<a asp-area="Admin"
			   asp-controller="PageInfo"
			   asp-action="EditPage"
			   asp-route-pageid="@Model.PageInfoModelId"
			   class="btn btn-outline-dark py-1 m-2 shadw minwidth100px"
			   title="редактировать данные">

				Изменить

			</a>

			<a asp-area="Admin"
			   asp-controller="PageInfo"
			   asp-action="DeletePage"
			   asp-route-pageid="@Model.PageInfoModelId"
			   class="btn btn-outline-danger py-1 m-2 shadw minwidth100px"
			   title="удалить страницу">

				Удалить

			</a>

			<a href="@Url.Content(Model.PageFullPathWithData)"
			   class="btn btn-outline-primary py-1 m-2 shadw minwidth100px"
			   title="просмотр">

				Просмотр

			</a>

			@if (!string.IsNullOrEmpty(Model.PagePathNickName))
			{
				<a href="@Url.Content(Model.PagePathNickName)"
				   class="btn btn-outline-primary py-1 m-2 shadw minwidth100px"
				   title="просмотр">

					Псевдоним

				</a>
			}

			<a asp-area="Admin"
			   asp-controller="PageInfo"
			   asp-action="Index"
			   class="btn btn-outline-success py-1 m-2 shadw minwidth100px"
			   title="список страниц">

				Список

			</a>

			@if (Model.MovieFile != null)
			{
				<a asp-area="Admin"
				   asp-controller="MovieInfo"
				   asp-action="DetailsMovie"
				   asp-route-movieid="@Model.MovieFile.MovieFileModelId"
				   class="btn btn-outline-info py-1 m-2 shadw minwidth100px"
				   title="данные фильма">

					Фильм

				</a>
			}

		</div>

	</div>

	@* кадры справа *@
	<div class="col-2 mx-auto d-none d-lg-block overflow-y-auto overflow-x-hidden height850">

		@if (Model.FramesAroundMainContent != null && Model.FramesAroundMainContent.FramesOnTheRight != null)
		{
			@foreach (var item in Model.FramesAroundMainContent.FramesOnTheRight)
			{
				<a href="@item.ImagePath/@(string.IsNullOrEmpty(item.WebImageHDFileName) == false ? item.WebImageHDFileName : item.WebImageFileName)"
				   class=""
				   title="@item.ImageAltTitle"
				   onclick="this.target='_blank'">

					<vc:view-image image-id="@item.ImageFileModelId"
								   css-class="my-2 w-100 shadw imageref"
								   icon-type="webicon200" />

				</a>
			}
		}
		else
		{
			<div class="col-2 d-none d-lg-block"></div>
		}

	</div>

</div>