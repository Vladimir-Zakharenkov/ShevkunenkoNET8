@model PageInfoModel

@{
	int i = 0;
	int innerAccordion = 0;
	string cssForLabel = "col-form-label text-primary fs-5 me-2";
}

<h1 class="fs-3 text_shadow">Информация о странице</h1>

<hr class="liniya" />

@* Id страницы *@
<div>

	<label asp-for="PageInfoModelId" class="@cssForLabel"></label>

	<p>
		<span class="fs-5 text_shadow fluid-font-size">
			@Model.PageInfoModelId
		</span>
		<br />
		<span class="fs-6 form-text text-success">
			идентификатор в базе данных (GUID)
		</span>
	</p>

	<hr class="w-75 mx-auto" />

</div>

@* Тег « title » *@
<div>

	<label asp-for="PageTitle" class="@cssForLabel"></label>

	<p>
		<span class="fs-5 text_shadow">
			@Model.PageTitle
		</span>
		<br />
		<span class="fs-6 form-text text-success">
			тег « title »
		</span>
	</p>

	<hr class="w-75 mx-auto" />

</div>

@* Карточка страницы и индекс сортировки *@
<div>

	<p>
		<span class="fs-5 text-primary">
			Карточка страницы
		</span>
	</p>

	<div class="row row-cols-1 row-cols-sm-2 row-cols-xl-3 justify-content-center">

		<vc:card-of-page page=Model />

	</div>

	<p class="mt-2">

		<label asp-for="SortOfPage" class="@cssForLabel"></label>

		<span class="fs-4 text-danger">
			@Model.SortOfPage
		</span>

	</p>

</div>

<div class="row">

	@* кадры слева *@
	<div class="col-2 mx-auto d-none d-lg-block overflow-y-auto overflow-x-hidden height850">

		@if (Model.FramesAroundMainContent != null && Model.FramesAroundMainContent.FramesOnTheLeft != null)
		{
			@foreach (var item in Model.FramesAroundMainContent.FramesOnTheLeft)
			{
				<a href="@item.ImagePath/@(string.IsNullOrEmpty(item.WebImageHDFileName) == false ? item.WebImageHDFileName : item.WebImageFileName)"
				   class=""
				   title="@item.ImageAltTitle"
				   onclick="this.target='_blank'">

					<vc:view-image image-id="@item.ImageFileModelId"
								   css-class="my-2 w-100 shadw imageref"
								   icon-type="webicon200" />

				</a>
			}
		}
		else
		{
			<div class="col-2 d-none d-lg-block"></div>
		}

	</div>

	<div class="col-12 col-lg-8 mx-auto p-2">

		@* Управление страницей *@
		<div class="card-footer border p-0 my-2">

			<a asp-area="Admin"
			   asp-controller="PageInfo"
			   asp-action="EditPage"
			   asp-route-pageid="@Model.PageInfoModelId"
			   class="btn btn-outline-dark py-1 m-2 shadw minwidth100px"
			   title="редактировать данные">

				Изменить

			</a>

			<a asp-area="Admin"
			   asp-controller="PageInfo"
			   asp-action="DeletePage"
			   asp-route-pageid="@Model.PageInfoModelId"
			   class="btn btn-outline-danger py-1 m-2 shadw minwidth100px"
			   title="удалить страницу">

				Удалить

			</a>

			<a href="@Url.Content(Model.PageFullPathWithData)"
			   class="btn btn-outline-primary py-1 m-2 shadw minwidth100px"
			   title="просмотр">

				Просмотр

			</a>

			@if (!string.IsNullOrEmpty(Model.PagePathNickName))
			{
				<a href="@Url.Content(Model.PagePathNickName)"
				   class="btn btn-outline-primary py-1 m-2 shadw minwidth100px"
				   title="просмотр">

					Псевдоним

				</a>
			}

			<a asp-area="Admin"
			   asp-controller="PageInfo"
			   asp-action="Index"
			   class="btn btn-outline-success py-1 m-2 shadw minwidth100px"
			   title="список страниц">

				Список

			</a>

			@if (Model.MovieFile != null)
			{
				<a asp-area="Admin"
				   asp-controller="MovieInfo"
				   asp-action="DetailsMovie"
				   asp-route-movieid="@Model.MovieFile.MovieFileModelId"
				   class="btn btn-outline-info py-1 m-2 shadw minwidth100px"
				   title="данные фильма">

					Фильм

				</a>
			}

		</div>

		@* Разделы информации (accordion) *@
		<div class="accordion" id="accordionDetailsPage">

			@* Адрес страницы *@
			<div class="accordion-item mb-3 shadw">

				@* Заголовок группы «адрес страницы» *@
				<h2 id="headingPageAddress" class="accordion-header shadw">

					<button class="accordion-button collapsed py-0 stranicy"
							type="button"
							data-bs-toggle="collapse"
							data-bs-target="#PageAddress"
							aria-expanded="true"
							aria-controls="PageAddress">

						<span class="form-label fs-5">Адрес :</span>

					</button>

				</h2>

				<div id="PageAddress"
					 class="accordion-collapse collapse"
					 aria-labelledby="headingPageAddress"
					 data-bs-parent="#accordionDetailsPage">

					<div class="accordion-body accordion-body-nointend text-start">

						@if (Model.PageAsRazorPage)
						{
							<p class="fs-5 mb-0">
								<span class="text-primary fw-bold">
									Тип страницы :
								</span>
								<br class="d-sm-none" />
								<span class="text_shadow">
									RazorPage
								</span>
							</p>

							<hr class="w-75 mx-auto" />

							<p class="fs-5 text-primary mb-0">
								Область:
								<span class="text-black">
									«@Model.PageArea.TrimStart('/')»
								</span>
							</p>
							<p class="fs-5 text-primary mb-0">
								Адрес:
								<span class="text-black">
									«@Model.PageArea@Model.PageLoc»
								</span>
							</p>
							<p class="fs-5 text-primary mb-0">
								Псевдоним:
								<span class="text-black">
									«@Model.PagePathNickName»
								</span>
							</p>
						}
						else
						{
							<p class="fs-5 mb-0">
								<span class="text-primary fw-bold">
									Тип страницы :
								</span>
								<br class="d-sm-none" />
								<span class="text_shadow">
									MVC
								</span>
							</p>

							<hr class="w-75 mx-auto" />

							<p class="fs-5 mb-0">
								<span class="text-primary fw-bold">
									Область :
								</span>
								<br class="d-sm-none" />
								@if (string.IsNullOrEmpty(Model.PageArea))
								{
									<span class="text_shadow">
										Root
									</span>
								}
								else
								{
									<span class="text_shadow">
										@Model.PageArea.TrimStart('/')
									</span>
								}
							</p>

							<hr class="w-75 mx-auto" />

							<p class="fs-5 mb-0">
								<span class="text-primary fw-bold">
									Контроллер :
								</span>
								<br class="d-sm-none" />
								<span class="text_shadow">
									@Model.Controller.TrimStart('/')
								</span>
							</p>

							<hr class="w-75 mx-auto" />

							<p class="fs-5 mb-0">
								<span class="text-primary fw-bold">
									Действие :
								</span>
								<br class="d-sm-none" />
								<span class="text_shadow">
									@Model.Action.TrimStart('/')
								</span>
							</p>

							<hr class="w-75 mx-auto" />

							<p class="fs-5 mb-0">
								<span class="text-primary fw-bold">
									Данные :
								</span>
								<br class="d-sm-none" />
								@if (string.IsNullOrEmpty(Model.RoutData))
								{
									<span class="fs-6 form-text text-success">
										данные не заданы
									</span>
								}
								else
								{
									<span class="text_shadow">
										@Model.RoutData
									</span>
								}
							</p>

							<hr class="w-75 mx-auto" />

							<p class="fs-5 mb-0">
								<span class="text-primary fw-bold">
									Полный адрес :
								</span>
								<br class="d-sm-none" />
								<span class="text_shadow">
									@Model.PageFullPathWithData
								</span>
								<hr class="w-75 mx-auto" />
								<span class="text_shadow">
									@Uri.UnescapeDataString(Model.PageFullPathWithData)
								</span>
							</p>

							<hr class="w-75 mx-auto" />

							<p class="fs-5 mb-0">
								<span class="text-primary fw-bold">
									Псевдоним (1) :
								</span>
								<br class="d-sm-none" />
								@if (string.IsNullOrEmpty(Model.PagePathNickName))
								{
									<span class="fs-6 form-text text-success">
										псевдоним (1) не задан
									</span>
								}
								else
								{
									<span class="text_shadow">
										@Model.PagePathNickName
									</span>
									<hr class="w-75 mx-auto" />
									<span class="text_shadow">
										@Uri.UnescapeDataString(Model.PagePathNickName)
									</span>
								}
							</p>

							<hr class="w-75 mx-auto" />

							<p class="fs-5 mb-0">
								<span class="text-primary fw-bold">
									Псевдоним (2) :
								</span>
								<br class="d-sm-none" />
								@if (string.IsNullOrEmpty(Model.PagePathNickName2))
								{
									<span class="fs-6 form-text text-success">
										псевдоним (2) не задан
									</span>
								}
								else
								{
									<span class="text_shadow">
										@Model.PagePathNickName2
									</span>
									<hr class="w-75 mx-auto" />
									<span class="text_shadow">
										@Uri.UnescapeDataString(Model.PagePathNickName2)
									</span>
								}
							</p>
						}

					</div>

				</div>

			</div>

			@* Карточка страницы *@
			<div class="accordion-item mb-3 shadw">

				<h2 id="headingPagePicture" class="accordion-header shadw">
					<button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#PagePicture" aria-expanded="true" aria-controls="PagePicture">
						<span class="form-label fs-5">Карточка :</span>
					</button>
				</h2>

				<div id="PagePicture" class="accordion-collapse collapse" aria-labelledby="headingPagePicture" data-bs-parent="#accordionDetailsPage">

					<div class="accordion-body accordion-body-nointend text-start text-sm-center">

						@if (Model.ImageFileModel != null)
						{
							<a asp-area="Admin"
							   asp-controller="ImageInfo"
							   asp-action="DetailsImage"
							   asp-route-imageid="@Model.ImageFileModelId"
							   class="d-block mx-auto mb-3 maxwidth300px shadw imageref"
							   title="информация о картинке"
							   onclick="this.target='_blank'">

								<vc:view-image image-id="@Model.ImageFileModelId"
											   css-class="w-100"
											   icon-type="webimage" />

							</a>

							@if (!string.IsNullOrEmpty(Model.ImageFileModel.WebImageFileName))
							{
								<a class="fs-5 text_shadow"
								   href="@Url.Content($"{Model.ImageFileModel.ImagePath}\\/{Model.ImageFileModel.WebImageFileName}")"
								   onclick="this.target='_blank'">
									@Model.ImageFileModel.ImagePath/@Model.ImageFileModel.WebImageFileName
								</a>
							}
							else
							{
								<a class="fs-5 text_shadow"
								   href="@Url.Content($"{Model.ImageFileModel.ImagePath}\\/{Model.ImageFileModel.WebImageFileName}")"
								   onclick="this.target='_blank'">
									@Model.ImageFileModel.ImagePath/@Model.ImageFileModel.ImageFileName
								</a>
							}
						}
						else
						{
							<p class="fs-6 form-text text-success">
								картинка для страницы не выбрана
							</p>
						}

						<hr class="w-75 mx-auto my-2" />

						@* Текст карточки страницы *@
						<p class="fw-bold fs-5 text-primary mb-2">
							Текст карточки (PageCardText) :
						</p>
						@if (string.IsNullOrEmpty(Model.PageCardText))
						{
							<p class="fs-6 form-text text-success text-center">
								(текст не задан)
							</p>
						}
						else
						{
							<p class="fordetails text-center fs-5 text_shadow">
								@Model.PageCardText
							</p>
						}

					</div>

				</div>

			</div>

			@* Связанный файл текста *@
			<div class="accordion-item mb-3 shadw">

				<h2 id="headingTextFile" class="accordion-header shadw">

					<button class="accordion-button collapsed py-0 stranicy"
							type="button"
							data-bs-toggle="collapse"
							data-bs-target="#TextFile"
							aria-expanded="true"
							aria-controls="TextFile">

						<span class="form-label fs-5">Связанный файл текста :</span>

					</button>

				</h2>

				<div id="TextFile"
					 class="accordion-collapse collapse"
					 aria-labelledby="headingPageTitle"
					 data-bs-parent="#accordionDetailsPage">

					<div class="accordion-body accordion-body-nointend text-center">

						@if (Model.TextInfo == null)
						{
							<p class="text-center fluid-font-size text-bg-danger">
								файл текста для страницы не задан
							</p>
						}
						else
						{
							<div id="accordionForTextFile" class="accordion">

								<a asp-area="Admin"
								   asp-controller="TextInfo"
								   asp-action="DetailsText"
								   asp-route-textId="@Model.TextInfoId"
								   class="d-block mx-auto maxwidth300px shadw imageref"
								   title="информация о файле текста"
								   onclick="this.target='_blank'">

									<label asp-for="@Model.TextInfo.FolderForText" class="@cssForLabel"></label>

									<p class="text_shadow text-indent-0 text-center fs-5">
										@DataConfig.TextsFolderPath.Replace('\\', '/')@Model.TextInfo.FolderForText
									</p>

									<hr class="w-25 mx-auto" />

									<span class="text_shadow my-2 fluid-font-size">
										@Model.TextInfo.TxtFileName
									</span>
									<br />
									<span class="text_shadow my-2 fluid-font-size">
										@Model.TextInfo.HtmlFileName
									</span>

								</a>

								@* Файл TXT *@
								<div class="accordion-item my-3 shadw">

									@* Заголовок группы «файл TXT» *@
									<h2 id="headingTxtText" class="accordion-header shadw">

										<button class="accordion-button collapsed py-0 stranicy"
												type="button"
												data-bs-toggle="collapse"
												data-bs-target="#TxtText"
												aria-expanded="true"
												aria-controls="TxtText">

											<span class="form-label fs-5">Файл TXT :</span>

										</button>

									</h2>

									<div id="TxtText"
										 class="accordion-collapse collapse pb-2 px-2"
										 aria-labelledby="headingTxtText">

										<textarea id="ClearTextInput" class="form-control fordetails fs-6 mb-2"
												  asp-for="ClearText"
												  readonly
												  rows="10"
												  aria-describedby="ClearTextInputHelpBlock">
												 </textarea>

										<div id="ClearTextInputHelpBlock" class="form-text">
											<span class="d-none d-sm-inline-block fs-6 text-success">тег «ClearText» - </span>
											<span class="fs-6 text-success">текст без разметки</span>
										</div>

									</div>

								</div>

								@* Файл HTML *@
								<div class="accordion-item my-3 shadw">

									@* Заголовок группы «файл HTML» *@
									<h2 id="headingHtmlText" class="accordion-header shadw">

										<button class="accordion-button collapsed py-0 stranicy"
												type="button"
												data-bs-toggle="collapse"
												data-bs-target="#HtmlText"
												aria-expanded="true"
												aria-controls="HtmlText">

											<span class="form-label fs-5">Файл HTML :</span>

										</button>

									</h2>

									<div id="HtmlText"
										 class="accordion-collapse collapse pb-2 px-2"
										 aria-labelledby="headingHtmlText">

										<textarea id="HtmlTextInput" class="form-control fordetails fs-6 mb-2"
												  asp-for="HtmlText"
												  readonly
												  rows="10"
												  aria-describedby="HtmlTextInputHelpBlock">
					                         </textarea>

										<div id="HtmlTextInputHelpBlock" class="form-text">

											<span class="d-none d-sm-inline-block fs-6 text-success">тег «HtmlText» - </span>
											<span class="fs-6 text-success">текст с разметкой</span>

										</div>

										<hr class="w-25 mx-auto" />

										<div class="bookpages lay1">

											<div class="descr lay1 overflow-y-scroll height400">

												@Html.Raw(Model.HtmlText)

											</div>

										</div>

										<div class="form-text mt-3">

											<span class="fs-6 text-success">вид текста на сайте</span>

										</div>

									</div>

								</div>

							</div>
						}

					</div>

				</div>

			</div>

			@* Иконка страницы *@
			<div class="accordion-item mb-3 shadw">

				<h2 id="headingPageIcon" class="accordion-header shadw">
					<button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#PageIcon" aria-expanded="true" aria-controls="PageIcon">
						<span class="form-label fs-5">Иконка :</span>
					</button>
				</h2>

				<div id="PageIcon" class="accordion-collapse collapse" aria-labelledby="headingPageIcon" data-bs-parent="#accordionDetailsPage">

					<div class="accordion-body accordion-body-nointend">

						@if (Model.IconItem != null)
						{
							<img itemprop="image"
								 class="card-img-top m-3 maxwidth300px shadw d-block mx-auto"
								 src="@DataConfig.IconsFolder/@Model.IconItem.IconPath/@Model.IconItem.IconFileName"
								 alt="иконка страницы"
								 title="иконка страницы" />

							<p class="fs-5 text_shadow text-start text-sm-center">
								<a href="@Url.Content($"{@DataConfig.IconsFolder}{Model.IconItem.IconPath}\\/{Model.IconItem.IconFileName}")"
								   onclick="this.target='_blank'">
									@DataConfig.IconsFolder@Model.IconItem.IconPath@Model.IconItem.IconFileName
								</a>
							</p>
						}

					</div>

				</div>

			</div>

			@* Тег «title» *@
			<div class="accordion-item mb-3 shadw">

				<h2 id="headingPageTitle" class="accordion-header shadw">

					<button class="accordion-button collapsed py-0 stranicy"
							type="button"
							data-bs-toggle="collapse"
							data-bs-target="#PageTitle"
							aria-expanded="true"
							aria-controls="PageTitle">

						<span class="form-label fs-5">Заголовок (title) :</span>

					</button>

				</h2>

				<div id="PageTitle"
					 class="accordion-collapse collapse"
					 aria-labelledby="headingPageTitle"
					 data-bs-parent="#accordionDetailsPage">

					<div class="accordion-body accordion-body-nointend text-center">

						<p class="text-start fluid-font-size">
							@Model.PageTitle
						</p>

						<p class="fs-6 form-text text-success">
							тег «title»
						</p>

					</div>

				</div>

			</div>

			@* Тег «description» *@
			<div class="accordion-item mb-3 shadw">

				<h2 id="headingPageDescription" class="accordion-header shadw">
					<button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#PageDescription" aria-expanded="true" aria-controls="PageDescription">
						<span class="form-label fs-5">Описание :</span>
					</button>
				</h2>

				<div id="PageDescription" class="accordion-collapse collapse" aria-labelledby="headingPageDescription" data-bs-parent="#accordionDetailsPage">

					<div class="accordion-body accordion-body-nointend text-center">

						<p class="text-start fluid-font-size">
							@Model.PageDescription
						</p>

						<p class="fs-6 form-text text-success">
							тег «description»
						</p>

					</div>

				</div>

			</div>

			@* Тег «keywords» *@
			<div class="accordion-item mb-3 shadw">

				<h2 id="headingPageKeywords" class="accordion-header shadw">
					<button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#PageKeywords" aria-expanded="true" aria-controls="PageKeywords">
						<span class="form-label fs-5 d-sm-none">Ключ-слова :</span>
						<span class="form-label fs-5 d-none d-sm-inline">Ключевые слова :</span>
					</button>
				</h2>

				<div id="PageKeywords" class="accordion-collapse collapse" aria-labelledby="headingPageKeywords" data-bs-parent="#accordionDetailsPage">

					<div class="accordion-body accordion-body-nointend">

						<p class="text-start fluid-font-size">
							@Model.PageKeyWords
						</p>

						<p class="fs-6 form-text text-success text-center">
							тег «keywords»
						</p>

					</div>

				</div>

			</div>

			@* Заголовок страницы *@
			<div class="accordion-item mb-3 shadw">

				<h2 id="headingPageHeading" class="accordion-header shadw">
					<button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#PageHeading" aria-expanded="true" aria-controls="PageHeading">
						<span class="form-label fs-5 d-sm-none">Заголовок (H1) :</span>
						<span class="form-label fs-5 d-none d-sm-inline">Заголовок вверху страницы (H1) :</span>
					</button>
