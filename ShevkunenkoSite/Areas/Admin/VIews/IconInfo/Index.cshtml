@model IEnumerable<IconFileModel>

@if (Model.Count() == 0)
{
    <div class="row">

        <div class="col text-center p-2">

            <p class="fs-5 text_shadow mb-0">В базе данных нет иконок</p>

        </div>

    </div>
}
else
{
    <div class="row">

        <div class="col-12 text-center mb-0">

            <p class="fs-5 text-primary mb-0">Количество типов иконок:&nbsp;<span class="text-black text_shadow">@Model.Count()</span></p>

        </div>

    </div>
}

<hr class="liniya" />

<h1 class="text_shadow">Иконки страниц сайта</h1>

<div class="row row-cols-3 row-cols-md-4 row-cols-lg-5 row-cols-xl-7 row-cols-xxl-8 g-2 justify-content-center">

    @foreach (var iconItem in Model)
    {
        <div class="col">

            <a asp-area="Admin" asp-controller="IconInfo" asp-action="Index" asp-route-iconID=@iconItem.IconFileModelId title="параметры иконки">

                <div class="card h-100 me-1 mb-1 p-1 shadw borderforitem">

                    <img src="/images/pageicons/@iconItem.IconPath/@iconItem.IconFileName" />

                    <p class="fs-2 text_shadow">@iconItem.IconFileNameExtension</p>

                </div>

            </a>

        </div>
    }

</div>