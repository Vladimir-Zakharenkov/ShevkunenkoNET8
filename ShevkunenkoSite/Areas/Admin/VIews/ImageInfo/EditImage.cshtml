                                    <hr class="liniya" />

                                    @if (string.IsNullOrEmpty(Model.EditImage.WebIcon100FileName))
                                    {
                                        <vc:view-image image-id="29F51581-8F24-4EDC-1F48-08DAE2B985EA" css-class="card-img-top m-2 width50percent shadw" icon-type="null" />

                                        <p class="text-danger mb-2 fw-bolder">иконка WebIcon100 отсутствует</p>
