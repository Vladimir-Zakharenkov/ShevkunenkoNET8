                    <input id="ImageAltTitleInput" asp-for="EditImage.ImageAltTitle" class="form-control text-center" aria-describedby="ImageAltTitleInputHelpBlock" />
                    <div id="ImageAltTitleInputHelpBlock" class="form-text col-12">
                        «alt» и «title» для тега «img» - <span class="text-danger">обязательное поле</span>
                    </div>
                    <span asp-validation-for="EditImage.ImageAltTitle" class="text-danger"></span>

                    <hr class="liniya" />

                    @* Фильтр поиска картинки в базе данных *@
                    <label asp-for="EditImage.SearchFilter" class="form-label text-primary fs-5"></label>
                    <textarea id="SearchFilterInput" rows="1" asp-for="EditImage.SearchFilter" class="form-control" aria-describedby="SearchFilterInputHelpBlock"></textarea>
                    <div id="SearchFilterInputHelpBlock" class="form-text">
                        <span>фильтры поиска - </span>
                    </div>
                    <span asp-validation-for="EditImage.SearchFilter" class="text-danger"></span>

                    <hr class="liniya" />

                    @* Каталог картинки *@
                    <p class="mb-3"><span class="fs-5 text-primary fw-bold">Текущий каталог: </span><span class="fs-5 text_shadow">@Model.EditImage.ImagePath</span></p>

                    <label asp-for="EditImage.ImagePath" class="form-label text-primary fs-5 fw-bold"></label>
                    <select asp-for="EditImage.ImagePath" asp-items="Model.ImageDirectories" aria-describedby="ImagePathInputHelpBlock">
                        <option selected value="@Model.EditImage.ImagePath">@Model.EditImage.ImagePath</option>
                    </select>
                    <div id="ImagePathInputHelpBlock" class="form-text col-12">
                        выбрать каталог картинки (в каталоге «images»)
                    </div>

                    <hr class="liniya" />

                    @* Новый каталог для картинки *@
