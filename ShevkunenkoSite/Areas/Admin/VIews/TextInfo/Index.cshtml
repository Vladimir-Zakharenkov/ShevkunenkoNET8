@model ItemsListViewModel

@* Значение строки поиска *@
<div>
	@if (!String.IsNullOrEmpty(Model.SearchString))
	{
		<div class="row mb-0">
			<p class="col-12 fs-5 text-primary">
				Поиск по строке: <span class="text-black text_shadow">@Model.SearchString</span>
			</p>
		</div>
	}
</div>

@* Количество текстов *@
<div>

	@if (Model.TotalItems == 0)
	{
		<div class="row">
			<div class="col text-center p-2">
				<p class="fs-5 text_shadow mb-0">В базе данных нет текстов</p>
			</div>
		</div>
	}
	else
	{
		<div class="row">
			<div class="col-12 text-center">
				<p class="fs-5 text-primary mb-0">Количество текстов:&nbsp;<span class="text-black text_shadow">@Model.TotalItems</span></p>
			</div>
		</div>
	}

	<hr class="liniya" />

</div>

@* Добавить текст - Поиск текста *@
<div class="row">

	<div class="col-12 col-md-3">
		<a class="btn btn-outline-danger shadw py-1 mt-2"
		   asp-area="Admin"
		   asp-controller="TextInfo"
		   asp-action="AddText"
		   title="добавить текст">
			Добавить
		</a>
	</div>

	<hr class="col-12 w-75 mt-3 d-md-none mx-auto" />

	<div class="col-12 col-md-9 mb-2">

		<form method="get" class="text-center text-md-end mt-md-2"
			  asp-area="Admin"
			  asp-controller="TextInfo"
			  asp-action="Index">

			<input type="text" class="d-inline-block align-middle mt-1 w-50" asp-for="SearchString" />

			<input type="submit" class="btn btn-outline-success shadw py-1 me-md-3" value="Поиск" title="поиск текста" />

		</form>

	</div>

	<hr class="liniya" />

</div>

