@* Таблица данных *@
<div class="row">

	<div class="col m-1 shadw">

		<div class="table-responsive">

			<table class="table table-sm table-hover caption-top align-middle">

				<thead>

					<tr class="d-flex table-secondary text-center">

						<th scope="col" class="col-9 col-sm-4 col-lg-3 text-primary border border-black border-end-2 border-start-0 border-top-0 border-bottom-0">Файл</th>
						<th scope="col" class="d-none d-sm-table-cell col-sm-6 col-xxl-7 text-primary border border-black border-end-2 border-start-0 border-top-0 border-bottom-0">Описание</th>
						<th scope="col" class="col-3 col-sm-2 col-lg-3 col-xxl-2"></th>

					</tr>

				</thead>

				<tbody>

					@foreach (var text in Model.AllTextFiles!)
					{
						<tr class="d-flex text-start">

							<td scope="col" class="col-9 col-sm-4 col-lg-3 align-content-center text_shadow">@text.TxtFileName</td>

							<td scope="col" class="d-none d-sm-table-cell col-sm-6 col-xxl-7 align-content-center text_shadow">@text.TextDescription</td>

							@* Кнопки Информация - Изменить - Удалить*@
							<td scope="col" class="col-3 col-sm-2 col-lg-3 col-xxl-2 align-content-center text-center">

								<a class="btn btn-outline-primary p-1 m-1 shadw minwidth40px"
								   asp-area="Admin"
								   asp-controller="TextInfo"
								   asp-action="DetailsText"
								   asp-route-textId="@text.TextInfoModelId"
								   title="информация о тексте">

									Info

								</a>

								<a class="btn btn-outline-success p-1 m-1 shadw minwidth40px"
								   asp-area="Admin"
								   asp-controller="TextInfo"
								   asp-action="EditText"
								   asp-route-textId="@text.TextInfoModelId"
								   title="изменить текст">

									Edit

								</a>

								<a class="btn btn-outline-danger p-1 m-1 shadw minwidth40px"
								   asp-area="Admin"
								   asp-controller="TextInfo"
								   asp-action="DeleteText"
								   asp-route-textId="@text.TextInfoModelId"
								   title="удалить текст">

									Del

								</a>

							</td>

						</tr>
					}

				</tbody>

			</table>

		</div>

	</div>

</div>

@* Разбивка на страницы *@
@if (Model.TotalItems > DataConfig.NumberOfItemsPerPage)
{
	<div pagination="@Model"></div>
}