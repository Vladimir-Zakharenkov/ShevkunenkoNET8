@model AddMovieViewModel

<script src="~/js/ckeditor5/ckeditor.js"></script>

<div class="row">

    @* Кадры фильма слева *@
    <vc:movie-frames image-filter=null left-side="true" one-frame="false" />

    <div class="col d-block mx-auto px-2">

        <h1 class="fs-3 text_shadow">Добавить фильм</h1>

        <hr class="liniya" />

        @* Показ ошибок ввода данных *@
        @if (Context.Request.Method == "POST")
        {
            <div asp-validation-summary="All" class="text-danger border border-top-0 border-danger mb-3"></div>
        }

        <div class="card p-2 lay1">

            <div class="card-body mx-0 p-0">

                <form method="post" enctype="multipart/form-data">

                    <input asp-for="MovieFileModelId" type="hidden" value="@Guid.Empty" />
                    <input asp-for="PageInfoModelId" type="hidden" value="@null" />

                    @* данные по группам*@
                    <div class="accordion" id="accordionAddMovie">

                        @* файл фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы «файл фильма» *@
                            <h2 class="accordion-header" id="headingInputFile">
                                <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#InputFile" aria-expanded="true" aria-controls="InputFile">
                                    <span class="form-label fs-5">Файл фильма :</span>
                                </button>
                            </h2>

                            <div id="InputFile" class="accordion-collapse collapse" aria-labelledby="headingInputFile" data-bs-parent="#accordionAddMovie">

                                <div class="accordion-body accordion-body-nointend text-center">

                                    @* выбрать файл фильма *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label asp-for="FileForMovieFormFile" class="col-form-label text-primary fs-5 me-2"></label>
                                        </div>

                                        <div class="col-auto text-start">
                                            <input id="FileForMovieFormFile" asp-for="FileForMovieFormFile" class="form-control" aria-describedby="FileForMovieFormFileInputHelpBlock" />
                                        </div>

                                        <div id="FileForMovieFormFileInputHelpBlock" class="form-text">

                                            <span class="fs-6 text-success">файл фильма</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="FileForMovieFormFile" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* выбрать файл полной версии фильма *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label for="FullMovieFormFileInput" asp-for="FullMovieFormFile" class="col-form-label text-primary fs-5 me-2"></label>
                                        </div>

                                        <div class="col-auto text-start">
                                            <input id="FullMovieFormFile" asp-for="FullMovieFormFile" class="form-control" aria-describedby="FullMovieFormFileInputHelpBlock" />
                                        </div>

                                        <div id="FullMovieFormFileInputHelpBlock" class="form-text">
                                            <span class="fs-6 text-success">файл полного фильма</span>
                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="FullMovieFormFile" class="text-danger"></span>
                                        }

                                    </div>

                                </div>

                            </div>

                        </div>

                        @* картинка и постер фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы «картинка и постер фильма» *@
                            <h2 class="accordion-header" id="headingInputPicture">
                                <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#InputPicture" aria-expanded="true" aria-controls="InputPicture">
                                    <span class="form-label fs-5">Картинка и постер :</span>
                                </button>
                            </h2>

                            <div id="InputPicture" class="accordion-collapse collapse" aria-labelledby="headingInputPicture" data-bs-parent="#accordionAddMovie">

                                <div class="accordion-body accordion-body-nointend text-center">

                                    @* выбрать картинку фильма *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label asp-for="ImageForMovieFormFile" class="col-form-label text-primary fs-5 me-2"></label>
                                        </div>

                                        <div class="col-auto text-start">
                                            <input id="ImageForMovieFormFileInput" class="form-control" asp-for="ImageForMovieFormFile" aria-describedby="ImageForMovieFormFileInputHelpBlock" />
                                        </div>

                                        <div id="ImageForMovieFormFileInputHelpBlock" class="form-text">

                                            <span class="fs-6 text-success">картинка для фильму - </span>
                                            <br class="d-inline-block d-xl-none" />
                                            <span class="fs-6 text-danger">обязательное поле</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="ImageForMovieFormFile" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* выбрать постер фильма *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label class="col-form-label text-primary fs-5 me-2" asp-for="PosterForMovieFormFile"></label>
                                        </div>

                                        <div class="col-auto text-start">
                                            <input id="PosterForMovieFormFileInput" class="form-control" asp-for="PosterForMovieFormFile" aria-describedby="PosterForMovieFormFileInputHelpBlock" />
                                        </div>

                                        <div id="PosterForMovieFormFileInputHelpBlock" class="form-text">

                                            <span class="fs-6 text-success">постер для фильму</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="PosterForMovieFormFile" class="text-danger"></span>
                                        }

                                    </div>

                                </div>

                            </div>

                        </div>

                        @* данные многосерийного фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы «многосерийный фильм» *@
                            <h2 class="accordion-header" id="headingSeries">
                                <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FilmSeries" aria-expanded="true" aria-controls="FilmSeries">
                                    <span class="form-label fs-5">Многосерийный фильм :</span>
                                </button>
                            </h2>

                            <div id="FilmSeries" class="accordion-collapse collapse" aria-labelledby="headingSeries" data-bs-parent="#accordionAddMovie">

                                <div class="accordion-body accordion-body-nointend text-center">

                                    @* текст поиска всех серий *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto text-end">
                                            <label class="form-label text-primary fs-5" asp-for="SeriesSearchFilter"></label>
                                        </div>

                                        <div class="col-12 col-md-10">
                                            <input id="SeriesSearchFilterInput" class="form-control text-center" asp-for="SeriesSearchFilter" aria-describedby="SeriesSearchFilterInputHelpBlock" />
                                        </div>

                                        <div id="SeriesSearchFilterInputHelpBlock" class="form-text">
                                            <span class="fs-6 text-success">текст поиска всех серий фильма</span>
                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="SeriesSearchFilter" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @*  количество серий *@
                                    <div class="row g-2 justify-content-center mb-2 mb-xl-4">

                                        <div class="col-auto">
                                            <label asp-for="MovieTotalParts" class="form-label text-primary fs-5"></label>
                                        </div>

                                        <div class="col-auto">
                                            <input id="MovieTotalPartsInput" asp-for="MovieTotalParts" value="1" class="form-control text-center" aria-describedby="MovieTotalPartsInputHelpBlock" />
                                        </div>

                                        <div id="MovieTotalPartsInputHelpBlock" class="form-text">
                                            <span class="fs-6 text-success">количество серий - </span>
                                            <br class="d-inline-block d-md-none" />
                                            <span class="fs-6 text-danger">обязательное поле</span>
                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieTotalParts" class="text-danger"></span>
                                        }

                                    </div>

                                    @*  номер серии *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label asp-for="MoviePart" class="form-label text-primary fs-5"></label>
                                        </div>

                                        <div class="col-auto">
                                            <input id="MoviePartInput" asp-for="MoviePart" value="1" class="form-control text-center" aria-describedby="MoviePartInputHelpBlock" />
                                        </div>

                                        <div id="MoviePartInputHelpBlock" class="form-text">
                                            <span class="fs-6 text-success">серия - </span>
                                            <span class="fs-6 text-danger">обязательное поле</span>
                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MoviePart" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* выбрать файл картинки для заголовка страницы серий *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label asp-for="ImageHeadForSeriesFormFile" class="col-form-label text-primary fs-5 me-2"></label>
                                        </div>

                                        <div class="col-auto text-start">
                                            <input id="ImageHeadForSeriesFormFile" class="form-control" asp-for="ImageHeadForSeriesFormFile" aria-describedby="ImageHeadForSeriesFormFileInputHelpBlock" />
                                        </div>

                                        <div id="ImageHeadForSeriesFormFileInputHelpBlock" class="form-text">
                                            <span class="fs-6 text-success">картинка на странице серий - </span><br />
                                            <span class="fs-6 text-danger">выбирать только для 1-ой серии</span>
                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="ImageHeadForSeriesFormFile" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* адрес страницы серий *@
                                    <div class="row g-2 justify-content-center">

                                        <label class="form-label text-primary fs-5" asp-for="PageForSeries"></label>

                                        <div class="col-12 col-md-10">
                                            <input id="PageForSeriesInput" class="form-control text-centermx-auto" asp-for="PageForSeries" aria-describedby="PageForSeriesInputHelpBlock" />
                                        </div>

                                        <div id="PageForSeriesInputHelpBlock" class="form-text">
                                            <span class="fs-6 text-success">страница серий</span>
                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="PageForSeries" class="text-danger"></span>
                                        }

                                    </div>

                                </div>

                            </div>

                        </div>

                        @* описание фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы «описание фильма» *@
                            <h2 class="accordion-header" id="headingDescription">
                                <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FilmDescription" aria-expanded="true" aria-controls="FilmDescription">
                                    <span class="form-label fs-5">Заголовок, описание :</span>
                                </button>
                            </h2>

                            <div id="FilmDescription" class="accordion-collapse collapse" aria-labelledby="headingDescription" data-bs-parent="#accordionAddMovie">

                                <div class="accordion-body accordion-body-nointend text-center">

                                    @* название фильма *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label asp-for="MovieCaption" class="col-form-label text-primary fs-5 me-2"></label>
                                        </div>

                                        <div class="col-12 col-md-10">
                                            <input id="MovieCaptionInput" asp-for="MovieCaption" class="form-control text-center" aria-describedby="MovieCaptionInputHelpBlock" />
                                        </div>

                                        <div id="MovieCaptionInputHelpBlock" class="form-text">

                                            <span class="fs-6 text-success">название фильма - </span>
                                            <br class="d-inline-block d-md-none" />
                                            <span class="fs-6 text-danger">обязательное поле</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieCaption" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto mb-2" />

                                    </div>

                                    @* заголовок страницы фильма *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label asp-for="MovieCaptionForOnline" class="col-form-label text-primary fs-5 me-2"></label>
                                        </div>

                                        <div class="col-12 col-md-10">
                                            <input id="MovieCaptionForOnlineInput" asp-for="MovieCaptionForOnline" class="form-control text-center" aria-describedby="MovieCaptionForOnlineInputHelpBlock" />
                                        </div>

                                        <div id="MovieCaptionForOnlineInputHelpBlock" class="form-text">

                                            <span class="fs-6 text-success">заголовок страницы фильма - </span>
                                            <span class="fs-6 text-danger">обязательное поле</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieCaptionForOnline" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* краткое содержание (SchemaOrg) *@
                                    <div>

                                        <label asp-for="MovieDescriptionForSchemaOrg" class="form-label text-primary fs-5"></label>

                                        <textarea id="MovieDescriptionForSchemaOrgInput" rows="3" asp-for="MovieDescriptionForSchemaOrg" class="form-control" aria-describedby="MovieDescriptionForSchemaOrgInputHelpBlock"></textarea>

                                        <div id="MovieDescriptionForSchemaOrgInputHelpBlock" class="form-text mb-2">

                                            <span class="fs-6 text-success">краткое содержание (SchemaOrg) - </span>
                                            <span class="fs-6 text-danger">обязательное поле</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieDescriptionForSchemaOrg" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* краткое содержание (HTML) *@
                                    <div>

                                        <label asp-for="MovieDescriptionHtml" class="form-label text-primary fs-5"></label>

                                        <textarea id="MovieDescriptionHtmlInput" rows="5" asp-for="MovieDescriptionHtml" class="form-control" aria-describedby="MovieDescriptionHtmlHelpBlock"></textarea>

                                        <div id="MovieDescriptionHtmlHelpBlock" class="form-text mb-2">

                                            <span class="fs-6 text-success">краткое содержание (HTML) - </span>
                                            <span class="fs-6 text-danger">обязательное поле</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieDescriptionHtml" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* название фильма для ленты кадров *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label asp-for="FramesAroundMovie" class="col-form-label text-primary fs-5 me-2"></label>
                                        </div>

                                        <div class="col-12 col-md-10">
                                            <input id="FramesAroundMovieInput" asp-for="FramesAroundMovie" class="form-control text-center" aria-describedby="FramesAroundMovieInputHelpBlock" />
                                        </div>

                                        <div id="FramesAroundMovieInputHelpBlock" class="form-text">

                                            <span class="fs-6 text-success">фильтр для ленты кадров</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="FramesAroundMovie" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* примечания к фильму *@
                                    <div>

                                        <label asp-for="MovieNote" class="form-label text-primary fs-5"></label>

                                        <textarea id="MovieNoteInput" rows="2" asp-for="MovieNote" class="form-control" aria-describedby="MovieNoteHelpBlock"></textarea>

                                        <div id="MovieNoteHelpBlock" class="form-text">

                                            <span class="fs-6 text-success">примечания к фильму</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieNote" class="text-danger"></span>
                                        }

                                    </div>

                                </div>

                            </div>

                        </div>

                        @* даты фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы «даты фильма» *@
                            <h2 class="accordion-header" id="headingFilmDate">
                                <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FilmDate" aria-expanded="true" aria-controls="FilmDate">
                                    <span class="form-label fs-5">Даты :</span>
                                </button>
                            </h2>

                            <div id="FilmDate" class="accordion-collapse collapse" aria-labelledby="headingFilmDate" data-bs-parent="#accordionAddMovie">

                                <div class="accordion-body accordion-body-nointend text-center">

                                    @* дата примьеры фильма *@
                                    <div class="row g-2 justify-content-center mb-xl-2">

                                        <div class="col-auto">
                                            <label asp-for="MovieDatePublished" class="col-form-label text-primary fs-5"></label>
                                        </div>

                                        <div class="col-auto">
                                            <input id="MovieDatePublishedInput" asp-for="MovieDatePublished" value="@DateTime.Today" class="form-control text-center" aria-describedby="MovieDatePublishedInputHelpBlock" />
                                        </div>

                                        <div id="MovieDatePublishedInputHelpBlock" class="form-text mb-2">

                                            <span class="fs-6 text-success">дата премьеры - </span>
                                            <br class="d-inline-block d-md-none" />
                                            <span class="fs-6 text-danger">обязательное поле</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieDatePublished" class="text-danger"></span>
                                        }
                                    </div>

                                    @* дата создания фильма *@
                                    <div class="row g-2 justify-content-center mb-xl-2">

                                        <div class="col-auto">
                                            <label asp-for="MovieDateCreated" class="col-form-label text-primary fs-5"></label>
                                        </div>

                                        <div class="col-auto">
                                            <input id="MovieDateCreatedInput" asp-for="MovieDateCreated" value="@DateTime.Today" class="form-control text-center" aria-describedby="MovieDateCreatedInputHelpBlock" />
                                        </div>

                                        <div id="MovieDateCreatedInputHelpBlock" class="form-text mb-2">

                                            <span class="fs-6 text-success">дата производства - </span>
                                            <br class="d-inline-block d-md-none" />
                                            <span class="fs-6 text-danger">обязательное поле</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieDateCreated" class="text-danger"></span>
                                        }

                                    </div>

                                    @* дата загрузки фильма на сайт *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label asp-for="MovieUploadDate" class="col-form-label text-primary fs-5"></label>
                                        </div>

                                        <div class="col-auto">
                                            <input id="MovieUploadDateInput" asp-for="MovieUploadDate" value="@DateTime.Today" class="form-control text-center" aria-describedby="MovieUploadDateInputHelpBlock" />
                                        </div>

                                        <div id="MovieUploadDateInputHelpBlock" class="form-text mb-2">

                                            <span class="fs-6 text-success">дата публикации на сайте - </span>
                                            <br class="d-inline-block d-md-none" />
                                            <span class="fs-6 text-danger">обязательное поле</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieUploadDate" class="text-danger"></span>
                                        }

                                    </div>

                                </div>

                            </div>

                        </div>

                        @* фильтры фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы «фильтры фильма» *@
                            <h2 class="accordion-header" id="headingFilmFilters">
                                <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FilmFilters" aria-expanded="true" aria-controls="FilmFilters">
                                    <span class="form-label fs-5">Фильтры :</span>
                                </button>
                            </h2>

                            <div id="FilmFilters" class="accordion-collapse collapse" aria-labelledby="headingFilmFilters" data-bs-parent="#accordionAddMovie">

                                <div class="accordion-body accordion-body-nointend text-center">

                                    @* жанры фильма *@
                                    <div>

                                        <label asp-for="MovieGenre" class="col-form-label text-primary fs-5 me-2"></label>

                                        <input id="MovieGenreInput" asp-for="MovieGenre" class="align-text-bottom col-12 col-md-10" aria-describedby="MovieGenreInputHelpBlock" />

                                        <div id="MovieGenreInputHelpBlock" class="form-text mb-2">

                                            <span class="fs-6 text-success">жанр фильма</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="MovieGenre" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* темы фильма *@
                                    <div>

                                        <label asp-for="TopicGuidList" class="col-form-label text-primary fs-5 me-2"></label><br />

                                        <select name="topicOptions" multiple class="col-12">

                                            @foreach (var item in Model.TopicsForMovie.ToDictionary(k => k.TopicMovieModelId.ToString(), v => v.TopicDescription))
                                            {
                                                <option value="@item.Key">@item.Value</option>
                                            }

                                        </select>

                                        <div id="TopicGuidListInputHelpBlock" class="form-text">

                                            <span class="fs-6 text-success">темы фильма</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="TopicGuidList" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* фильтры поиска фильма *@
                                    <div class="row g-2 justify-content-center mb-1">

                                        <div class="col-12">
                                            <label asp-for="SearchFilter" class="form-label text-primary fs-5"></label>
                                        </div>

                                        <div class="col-12 col-md-10">
                                            <textarea id="SearchFilterInput" rows="2" asp-for="SearchFilter" class="form-control" aria-describedby="SearchFilterInputHelpBlock"></textarea>
                                        </div>

                                        <div id="SearchFilterInputHelpBlock" class="form-text mb-2">

                                            <span class="fs-6 text-success">фильтры поиска</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="SearchFilter" class="text-danger"></span>
                                        }

                                        <hr class="w-50 mx-auto" />

                                    </div>

                                    @* фильм в основном списке *@
