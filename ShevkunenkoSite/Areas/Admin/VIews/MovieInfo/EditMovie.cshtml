                                            <label asp-for="@Model.MovieItem.SearchFilter3" class="form-label text-primary fs-5 fw-bold"></label>
                                            <textarea id="SearchFilter3Input" rows="3" asp-for="@Model.MovieItem.SearchFilter3" class="form-control" aria-describedby="SearchFilter3InputHelpBlock"></textarea>
                                            <div id="SearchFilter3InputHelpBlock" class="fs-6 form-text">
                                                <span>фильтры поиска (3) связанных видео</span>
                                            </div>
                                            <span asp-validation-for="@Model.MovieItem.SearchFilter2" class="text-danger"></span>

                                            <hr class="liniya" />

                                            @* тип картинки группы 3 *@
                                            <label asp-for="@Model.MovieItem.IsImage3" class="form-label text-primary fs-5 fw-bold"></label>
                                            <div class="form-check">
                                                <input id="IsImage3true" class="form-check-input" asp-for="@Model.MovieItem.IsImage3" type="radio" value="true">
                                                <label class="form-check-label" for="IsImage3true">
                                                    Картинка
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input id="IsImage3false" class="form-check-input" asp-for="@Model.MovieItem.IsImage3" type="radio" value="false">
                                                <label class="form-check-label" for="IsImage3false">
                                                    Постер
                                                </label>
                                            </div>
                                            <div id="IsImage3InputHelpBlock" class="fs-6 form-text">
                                                <span>выбрать изображение как постер или как картинка</span>
                                            </div>
                                            <span asp-validation-for="@Model.MovieItem.IsImage3" class="text-danger"></span>

                                            <hr class="liniya" />

                                            @* формат картинки группы 3 *@
                                            <div class="row g-2 justify-content-center">
                                                <div class="col-auto">
                                                    <label asp-for="@Model.MovieItem.IconType3" class="col-form-label text-primary fs-5 fw-bold"></label>
                                                </div>
                                                <div class="col-auto">
                                                    <select id="IconType3Input" asp-for="@Model.MovieItem.IconType3" class="form-select">
                                                        <option value="hd">hd</option>
                                                        <option value="image">image</option>
                                                        <option value="icon300">icon300</option>
                                                        <option value="icon200">icon200</option>
                                                        <option value="icon100">icon100</option>
                                                        <option value="webhd">webhd</option>
                                                        <option value="webimage">webimage</option>
                                                        <option value="webicon300" selected>webicon300</option>
                                                        <option value="webicon200">webicon200</option>
                                                        <option value="webicon100">webicon100</option>
                                                    </select>
                                                </div>
                                                <div class="col-12 justify-content-center">
                                                    <span id="IconType3InputHelpBlock" class="fs-6 form-text">
                                                        параметры изображения <span class="text-danger">обязательное поле</span>
                                                    </span>
                                                </div>
                                            </div>
                                            <span asp-validation-for="@Model.MovieItem.IconType3" class="text-danger"></span>

                                            <hr class="liniya" />

                                            @* для многосерийного фильма *@
                                            <label asp-for="@Model.MovieItem.IsPartsMoreOne3" class="form-label text-primary fs-5 fw-bold"></label>
                                            <div class="form-check">
                                                <input id="IsPartsMoreOne3true" class="form-check-input" asp-for="@Model.MovieItem.IsPartsMoreOne3" type="radio" value="true">
                                                <label class="form-check-label" for="IsPartsMoreOne3true">
                                                    Многосерийный
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input id="IsPartsMoreOne3false" class="form-check-input" asp-for="@Model.MovieItem.IsPartsMoreOne3" type="radio" value="false">
                                                <label class="form-check-label" for="IsPartsMoreOne3false">
                                                    Одна серия
                                                </label>
                                            </div>
                                            <div id="isPartsMoreOne3InputHelpBlock" class="fs-6 form-text">
                                                <span>выбрать ссылку на страницу фильма</span>
                                            </div>
                                            <span asp-validation-for="@Model.MovieItem.IsPartsMoreOne3" class="text-danger"></span>

                                            <hr class="liniya" />

                                            @* фильмы из списка MainList *@
                                            <label asp-for="@Model.MovieItem.AllMoviesFromDB3" class="form-label text-primary fs-5 fw-bold"></label>
                                            <div class="form-check">
                                                <input id="AllMoviesFromDB3true" class="form-check-input" asp-for="@Model.MovieItem.AllMoviesFromDB3" type="radio" value="true">
                                                <label class="form-check-label" for="AllMoviesFromDB3true">
                                                    Все фильмы
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input id="AllMoviesFromDB3false" class="form-check-input" asp-for="@Model.MovieItem.AllMoviesFromDB3" type="radio" value="false">
                                                <label class="form-check-label" for="AllMoviesFromDB3false">
                                                    Фильмы из списка MainList
                                                </label>
                                            </div>
                                            <div id="AllMoviesFromDB3InputHelpBlock" class="fs-6 form-text">
                                                <span>все найденные фильмы или фильмы с параметром InMainList (true)</span>
                                            </div>
                                            <span asp-validation-for="@Model.MovieItem.AllMoviesFromDB3" class="text-danger"></span>

                                        </div>

                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                    @* сохранить-отменить данные *@
                    <div class="card-footer p-2">

                        <button type="submit" class="btn btn-outline-success m-2 text-center shadw" title="сохранить изменения">Сохранить</button>

                        <a class="btn btn-outline-danger m-2 shadw"
                           asp-area="Admin"
                           asp-controller="MovieInfo"
                           asp-action="Index"
                           title="отменить">Отменить</a>

                    </div>

                </form>

            </div>

        </div>

    </div>

    @* Кадры фильма справа *@
    @if (!string.IsNullOrEmpty(Model.MovieItem.FramesAroundMovie) == true)
    {
        <vc:movie-frames image-filter="@Model.MovieItem.FramesAroundMovie" left-side="false" one-frame="false" />
    }
    else
    {
        <vc:movie-frames image-filter="@Model.MovieItem.MovieCaption," left-side="false" one-frame="false" />
    }

</div>