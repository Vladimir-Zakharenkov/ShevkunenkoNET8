@model EditMovieViewModel

@{
    var optionsDictionary = Model.TopicsForMovie.ToDictionary(k => k.TopicMovieModelId.ToString(), v => v.TopicDescription);
}

<div class="row">

    @* Кадры фильма слева *@
    @if (!string.IsNullOrEmpty(Model.MovieItem.FramesAroundMovie) == true)
    {
        <vc:movie-frames image-filter="@Model.MovieItem.FramesAroundMovie" left-side="true" one-frame="false" />
    }
    else
    {
        <vc:movie-frames image-filter="@Model.MovieItem.MovieCaption," left-side="true" one-frame="false" />
    }

    <div class="col col-lg-9 col-xl-7 col-xxl-6 d-block mx-auto px-2">

        <h1 class="fs-3 text_shadow">Изменить данные</h1>

        <hr class="liniya" />

        @if (Context.Request.Method == "POST")
        {
            <div asp-validation-summary="All" class="text-danger border border-top-0 border-danger mb-3"></div>
        }

        <div class="card p-2">

            <div class="card-body mx-0 p-0">

                <form method="post" enctype="multipart/form-data">

                    <input asp-for="MovieItem.MovieFileModelId" type="hidden" />
                    <input asp-for="MovieItem.MovieDuration" type="hidden" />
                    <input asp-for="MovieItem.MovieWidth" type="hidden" />
                    <input asp-for="MovieItem.MovieHeight" type="hidden" />
                    <input asp-for="MovieItem.MovieFileName" type="hidden" />
                    <input asp-for="MovieItem.MovieFileExtension" type="hidden" />
                    <input asp-for="MovieItem.MovieMimeType" type="hidden" />
                    <input asp-for="MovieItem.MovieFileSize" type="hidden" />
                    <input asp-for="MovieItem.ImageFileModelId" type="hidden" />
                    <input asp-for="MovieItem.MoviePosterGuid" type="hidden" />

                    @* название фильма *@
                    @if (Context.Request.Method == "GET")
                    {
                        <h2 class="fs-3 mb-3 text_shadow"><span class="text-black">@Model.MovieItem.MovieCaption</span></h2>
                    }

                    @*  количество серий и номер серии фильма *@
                    @if (Context.Request.Method == "GET" && Model.MovieItem.MovieTotalParts > 1)
                    {
                        <p class="fs-5 mb-0 text_shadow">количество серий: <span class="text-success">«@Model.MovieItem.MovieTotalParts»</span></p>

                        <p class="fs-5 mb-0 text_shadow">серия: <span class="text-success">«@Model.MovieItem.MoviePart»</span></p>

                        <hr class="liniya" />
                    }

                    @* данные по группам *@
                    <div class="accordion" id="accordionEditMovie">

                        @* файл фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы *@
                            <h2 class="accordion-header" id="headingFilmFile">
                                <button class="accordion-button collapsed py-0" type="button" data-bs-toggle="collapse" data-bs-target="#FilmFile" aria-expanded="true" aria-controls="FilmFile">
                                    <span class="form-label text-success fs-5">Файл фильма :</span>
                                </button>
                            </h2>

                            <div id="FilmFile" class="accordion-collapse collapse" aria-labelledby="headingFilmFile" data-bs-parent="#accordionEditMovie">

                                @* файл фильма *@
                                <div class="accordion-body accordion-body-nointend text-center">

                                    @if (Context.Request.Method == "GET")
                                    {
                                        @if (string.IsNullOrEmpty(Model.MovieItem.MovieFileName))
                                        {
                                            <p class="fs-5 mb-3 text_shadow">файл фильма отсутствует</p>
                                        }
                                        else
                                        {
                                            <p class="fs-5 mb-3 text_shadow">файл фильма: <span class="text-success">«@Model.MovieItem.MovieFileName»</span></p>
                                        }
                                    }

                                </div>

                                @* выбрать файл фильма *@
                                <div class="row g-2 justify-content-center pb-2">

                                    <div class="col-auto">

                                        <label asp-for="FileForMovieFormFile" class="col-form-label text-primary fs-5 me-2"></label>

                                    </div>

                                    <div class="col-auto">

                                        <input id="FileForMovieFormFileInput" asp-for="FileForMovieFormFile" class="form-control text-center" aria-describedby="FileForMovieFormFileInputHelpBlock" />

                                    </div>

                                    <div id="FileForMovieFormFileInputHelpBlock" class="fs-6 form-text">

                                        <span>выбрать файл</span>

                                    </div>

                                    @if (Context.Request.Method == "POST")
                                    {
                                        <span asp-validation-for="FileForMovieFormFile" class="text-danger"></span>
                                    }

                                </div>

                            </div>

                        </div>

                        @* полная версия фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы *@
                            <h2 class="accordion-header" id="headingFullFilm">
                                <button class="accordion-button collapsed py-0" type="button" data-bs-toggle="collapse" data-bs-target="#FullFilm" aria-expanded="true" aria-controls="FullFilm">
                                    <span class="form-label text-success fs-5">Полная версия фильма :</span>
                                </button>
                            </h2>

                            <div id="FullFilm" class="accordion-collapse collapse" aria-labelledby="headingFullFilm" data-bs-parent="#accordionEditMovie">

                                @* файл полной версии фильма *@
                                @if (Context.Request.Method == "GET")
                                {
                                    @if (Model.FullMovie == null)
                                    {
                                        <p class="fs-5 mb-4 text_shadow">файл полной версии не определен</p>
                                    }
                                    else
                                    {
                                        <p class="fs-5 mb-4 text_shadow">файл полной версии: <span class="text-success">«@Model.FullMovie.MovieFileName»</span></p>
                                    }
                                }

                                @* выбрать файл полной версии фильма *@
                                <div class="row g-2 justify-content-center pb-2">

                                    <div class="col-auto">

                                        <label class="col-form-label text-primary fs-5 me-2" asp-for="FullMovieFormFile"></label>

                                    </div>

                                    <div class="col-auto">

                                        <input id="FullMovieFormFile" class="form-control text-center" asp-for="FullMovieFormFile" aria-describedby="FullMovieFormFileInputHelpBlock" />

                                    </div>

                                    <div id="FullMovieFormFileInputHelpBlock" class="fs-6 form-text">

                                        <span>выбрать файл полной версии фильма</span><span class="text-danger"></span>

                                    </div>

                                    @if (Context.Request.Method == "POST")
                                    {
                                        <span asp-validation-for="FullMovieFormFile" class="text-danger"></span>
                                    }

                                </div>

                            </div>

                        </div>

                        @* страница фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы *@
                            <h2 class="accordion-header" id="headingFilmPage">
                                <button class="accordion-button collapsed py-0" type="button" data-bs-toggle="collapse" data-bs-target="#FilmPage" aria-expanded="true" aria-controls="FilmPage">
                                    <span class="form-label text-success fs-5">Страница фильма :</span>
                                </button>
                            </h2>

                            <div id="FilmPage" class="accordion-collapse collapse pb-2" aria-labelledby="headingFilmPage" data-bs-parent="#accordionEditMovie">

                                @* <label asp-for="PageForMovie" class="form-label text-primary fs-5 await  text_shadow"></label> *@

                                @if (Context.Request.Method == "GET")
                                {
                                    <p class="fs-5 text_shadow">текущая страница:</p>
                                    <p class="fs-5 mb-2 text-success text_shadow">«@Model.MovieItem.PageInfoModel?.PageFullPathWithData»</p>
                                }

                                <input id="PageForMovieInput" class="form-control text-center" asp-for="PageForMovie" aria-describedby="PageForMovieInputHelpBlock" />

                                <div id="PageForMovieInputHelpBlock" class="fs-6 form-text">

                                    адрес страницы фильма - <span class="text-danger">для удаления введите 0</span>

                                </div>

                                <span asp-validation-for="PageForMovie" class="text-danger"></span>

                            </div>

                        </div>

                        @* картинка фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы *@
                            <h2 class="accordion-header" id="headingFilmImage">
                                <button class="accordion-button collapsed py-0" type="button" data-bs-toggle="collapse" data-bs-target="#FilmImage" aria-expanded="true" aria-controls="FilmImage">
                                    <span class="form-label text-success fs-5">Картинка для фильма :</span>
                                </button>
                            </h2>

                            <div id="FilmImage" class="accordion-collapse collapse" aria-labelledby="headingFilmImage" data-bs-parent="#accordionEditMovie">

                                @* картинка фильма *@
                                @if (Context.Request.Method == "GET")
                                {
                                    @if (Model.MovieItem.ImageFileModelId != null)
                                    {
                                        <vc:view-image image-id="@Model.MovieItem.ImageFileModelId" css-class="card-img-top m-2 width50percent shadw" icon-type="webimage" />

                                        if (!string.IsNullOrEmpty(Model.MovieItem.ImageFileModel?.WebImageFileName))
                                        {
                                            <p class="fs-5 mt-2 mb-3 text_shadow">файл: <span class="text-success">«@Model.MovieItem.ImageFileModel?.ImagePath/@Model.MovieItem.ImageFileModel?.WebImageFileName»</span></p>
                                        }
                                        else
                                        {
                                            <p class="fs-5 mt-2 mb-3 text_shadow">файл: <span class="text-success">«@Model.MovieItem.ImageFileModel?.ImagePath/@Model.MovieItem.ImageFileModel?.ImageFileName»</span></p>
                                        }
                                    }
                                    else
                                    {
                                        <h2 class="fs-4 my-3 text_shadow">Картинка для видео отсутствует</h2>
                                    }
                                }

                                @* выбрать картинку фильма *@
                                <div class="row g-2 justify-content-center pb-2">

                                    <div class="col-auto">

                                        <input id="ImageForMovieFormFileInput" class="form-control text-center" asp-for="ImageForMovieFormFile" aria-describedby="ImageForMovieFormFileInputHelpBlock" />

                                    </div>

                                    <div id="ImageForMovieFormFileInputHelpBlock" class="fs-6 form-text">

                                        <span>выбрать картинку для фильма</span>

                                    </div>

                                    @if (Context.Request.Method == "POST")
                                    {
                                        <span asp-validation-for="ImageForMovieFormFile" class="text-danger"></span>
                                    }

                                </div>

                            </div>

                        </div>

                        @* постер фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы *@
                            <h2 class="accordion-header" id="headingFilmPoster">
                                <button class="accordion-button collapsed py-0" type="button" data-bs-toggle="collapse" data-bs-target="#FilmPoster" aria-expanded="true" aria-controls="FilmPoster">
                                    <span class="form-label text-success fs-5">Постер для фильма :</span>
                                </button>
                            </h2>

                            <div id="FilmPoster" class="accordion-collapse collapse" aria-labelledby="headingFilmPoster" data-bs-parent="#accordionEditMovie">

                                @* постер фильма *@
                                @if (Context.Request.Method == "GET")
                                {
                                    @if (Model.PosterForMovie != null)
                                    {
                                        <vc:view-image image-id="@Model.PosterForMovie.ImageFileModelId" css-class="card-img-top m-2 width50percent shadw" icon-type="webimage" />

                                        if (!string.IsNullOrEmpty(Model.PosterForMovie.WebImageFileName))
                                        {
                                            <p class="fs-5 mt-2 mb-3 text_shadow">файл: <span class="text-success">«@Model.PosterForMovie.ImagePath/@Model.PosterForMovie.WebImageFileName»</span></p>
                                        }
                                        else
                                        {
                                            <p class="fs-5 mt-2 mb-3 text_shadow">файл: <span class="text-success">«@Model.PosterForMovie.ImagePath/@Model.PosterForMovie.ImageFileName»</span></p>
                                        }
                                    }
                                    else
                                    {
                                        <h2 class="fs-4 my-3 text_shadow">Постер для видео отсутствует</h2>
                                    }
                                }

                                @*выбрать постер фильма *@
                                <div class="row g-2 justify-content-center pb-2">

                                    <div class="col-auto">

                                        <input id="PosterForMovieFormFileInput" asp-for="PosterForMovieFormFile" class="form-control text-center" aria-describedby="PosterForMovieFormFileInputHelpBlock" />

                                    </div>

                                    <div id="PosterForMovieFormFileInputHelpBlock" class="fs-6 form-text">

                                        <span>выбрать постер для фильму</span>

                                    </div>

                                    @if (Context.Request.Method == "POST")
                                    {
                                        <span asp-validation-for="PosterForMovieFormFile" class="text-danger"></span>
                                    }

                                </div>

                            </div>

                        </div>

                        @* данные многосерийного фильма *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы *@
                            <h2 class="accordion-header" id="headingSeries">
                                <button class="accordion-button collapsed py-0" type="button" data-bs-toggle="collapse" data-bs-target="#FilmSeries" aria-expanded="true" aria-controls="FilmSeries">
                                    <span class="form-label text-success fs-5">Многосерийный фильм :</span>
                                </button>
                            </h2>

                            <div id="FilmSeries" class="accordion-collapse collapse" aria-labelledby="headingSeries" data-bs-parent="#accordionEditMovie">

                                <div class="accordion-body accordion-body-nointend text-center">

                                    @* текст поиска всех серий *@
                                    <div class="mb-3">

                                        <label class="form-label text-primary fs-5 await" asp-for="MovieItem.SeriesSearchFilter"></label>
                                        <input id="SeriesSearchFilterInput" class="form-control text-center" asp-for="MovieItem.SeriesSearchFilter" aria-describedby="SeriesSearchFilterInputHelpBlock" />

                                        <div id="SeriesSearchFilterInputHelpBlock" class="fs-6 form-text">

                                            текст поиска всех серий фильма

                                        </div>

                                        <span asp-validation-for="MovieItem.SeriesSearchFilter" class="text-danger"></span>

                                    </div>

                                    @* количество серий *@
                                    <div class="row g-2 justify-content-center">
                                        <div class="col-auto">
                                            <label class="form-label text-primary fs-5" asp-for="MovieItem.MovieTotalParts"></label>
                                        </div>
                                        <div class="col-auto">
                                            <input id="MovieTotalPartsInput" asp-for="MovieItem.MovieTotalParts" class="form-control text-center" aria-describedby="MovieTotalPartsInputHelpBlock" />
                                        </div>
                                        <div id="MovieTotalPartsInputHelpBlock" class="fs-6 form-text">
                                            количество серий - <span class="text-danger">обязательное поле</span>
                                        </div>
                                        <span asp-validation-for="MovieItem.MovieTotalParts" class="text-danger"></span>
                                    </div>

                                    @*  номер серии *@
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">
                                            <label asp-for="@Model.MovieItem.MoviePart" class="form-label text-primary fs-5"></label>
                                        </div>
                                        <div class="col-auto">
                                            <input id="MoviePartInput" class="form-control text-center" asp-for="MovieItem.MoviePart" aria-describedby="MoviePartInputHelpBlock" />
                                        </div>
                                        <div id="MoviePartInputHelpBlock" class="fs-6 form-text">
                                            серия - <span class="text-danger">обязательное поле</span>
                                        </div>
                                        <span asp-validation-for="MovieItem.MoviePart" class="text-danger"></span>

                                        <hr class="liniya" />

                                    </div>

                                    <!-- картинка для заголовка страницы серий -->
                                    @if (Context.Request.Method == "GET")
                                    {
                                        @if (Model.MovieItem.ImageForHeadSeriesImageFileModelId != null)
                                        {
                                            <h2 class="fs-4 text_shadow">Картинка страницы серий</h2>

                                            <vc:view-image image-id="@Model.MovieItem.ImageForHeadSeriesImageFileModelId" css-class="card-img-top m-2 width50percent shadw" icon-type="webimage" />

                                            if (Model.MovieItem.ImageForHeadSeries is not null)
                                            {
                                                if (!string.IsNullOrEmpty(Model.MovieItem.ImageForHeadSeries.WebImageFileName))
                                                {
                                                    <p class="fs-5 mt-2 mb-3 text_shadow">файл: <span class="text-success">«@Model.MovieItem.ImageForHeadSeries.ImagePath/@Model.MovieItem.ImageForHeadSeries.WebImageFileName»</span></p>
                                                }
                                                else
                                                {
                                                    <p class="fs-5 mt-2 mb-3 text_shadow">файл: <span class="text-success">«@Model.MovieItem.ImageForHeadSeries.ImagePath/@Model.MovieItem.ImageForHeadSeries.ImageFileName»</span></p>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <h2 class="fs-5 mb-3 text_shadow">Картинка для страницы серий отсутствует</h2>
                                        }
                                    }

                                    <!-- выбрать файл картинки для заголовка страницы серий -->
                                    <div class="row g-2 justify-content-center">

                                        <div class="col-auto">

                                            <label asp-for="ImageHeadForSeriesFormFile" class="col-form-label text-primary fs-5 me-2"></label>

                                        </div>

                                        <div class="col-auto">

                                            <input id="ImageHeadForSeriesFormFileInput" class="form-control text-center" asp-for="ImageHeadForSeriesFormFile" aria-describedby="ImageHeadForSeriesFormFileInputHelpBlock" />

                                        </div>

                                        <div id="ImageHeadForSeriesFormFileInputHelpBlock" class="fs-6 form-text">

                                            <span>картинка на странице серий - </span><span class="text-danger">выбирать только для 1-ой серии</span>

                                        </div>

                                        @if (Context.Request.Method == "POST")
                                        {
                                            <span asp-validation-for="ImageHeadForSeriesFormFile" class="text-danger"></span>
                                        }

                                        <hr class="liniya" />

                                    </div>

                                    <!-- адрес страницы серий фильма -->
                                    <div>

                                        <label asp-for="PageForSeriesString" class="form-label text-primary fs-5 await"></label>

                                        @if (Context.Request.Method == "GET")
                                        {
                                            <p class="fs-5 mb-2 text_shadow">текущая страница: <span class="text-success">«@Model.PageForSeriesString?.TrimEnd('?')»</span></p>
                                        }

                                        <input id="PageForSeriesStringInput" asp-for="PageForSeriesString" class="form-control text-center" aria-describedby="PageForSeriesStringInputHelpBlock" />

                                        <div id="PageForSeriesStringInputHelpBlock" class="fs-6 form-text">

                                            адрес страницы серий фильма - <span class="text-danger">для удаления введите 0</span>

                                        </div>

                                        <span asp-validation-for="PageForSeriesString" class="text-danger"></span>

                                    </div>

                                </div>

                            </div>

                        </div>

                        @* заголовок, описание, лента кадров *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы *@
                            <h2 class="accordion-header" id="headingDescription">
                                <button class="accordion-button collapsed py-0" type="button" data-bs-toggle="collapse" data-bs-target="#FilmDescription" aria-expanded="true" aria-controls="FilmDescription">
                                    <span class="form-label text-success fs-5">Заголовок, описание, лента кадров :</span>
                                </button>
                            </h2>

                            <div id="FilmDescription" class="accordion-collapse collapse" aria-labelledby="headingDescription" data-bs-parent="#accordionEditMovie">

                                <div class="accordion-body accordion-body-nointend text-center">

                                    <label asp-for="MovieItem.MovieCaption" class="form-label text-primary fs-5"></label>
                                    <input id="MovieCaptionInput" class="form-control text-center" asp-for="MovieItem.MovieCaption" aria-describedby="MovieCaptionInputHelpBlock" />
                                    <div id="MovieCaptionInputHelpBlock" class="form-text text-center mb-2">
                                        название фильма - <span class="text-danger">обязательное поле</span>
                                    </div>
                                    <span asp-validation-for="MovieItem.MovieCaption" class="text-danger"></span>

                                    <hr class="m-0 mb-2" />

                                    <label asp-for="MovieItem.MovieCaptionForOnline" class="form-label text-primary fs-5"></label>
                                    <input id="MovieCaptionForOnlineInput" asp-for="MovieItem.MovieCaptionForOnline" class="form-control text-center" aria-describedby="MovieCaptionForOnlineInputHelpBlock" />
                                    <div id="MovieCaptionForOnlineInputHelpBlock" class="form-text mb-2">
                                        заголовок страницы фильма (HTML) - <span class="text-danger">обязательное поле</span>
                                    </div>
                                    <span asp-validation-for="MovieItem.MovieCaptionForOnline" class="text-danger"></span>

                                    <hr class="m-0 mb-2" />

                                    <label asp-for="MovieItem.MovieDescriptionForSchemaOrg" class="form-label text-primary fs-5"></label>
                                    <textarea id="MovieDescriptionForSchemaOrgInput" rows="7" asp-for="MovieItem.MovieDescriptionForSchemaOrg" class="form-control" aria-describedby="MovieDescriptionForSchemaOrgInputHelpBlock"></textarea>
                                    <div id="MovieDescriptionForSchemaOrgInputHelpBlock" class="form-text pb-2">
                                        <span>краткое содержание (SchemaOrg) - </span><span class="text-danger">обязательное поле</span>
                                    </div>
                                    <span asp-validation-for="MovieItem.MovieDescriptionForSchemaOrg" class="text-danger"></span>

                                    <hr class="m-0 mb-2" />

                                    <label asp-for="MovieItem.MovieDescriptionHtml" class="form-label text-primary fs-5"></label>
                                    <textarea id="MovieDescriptionHtmlInput" rows="7" asp-for="MovieItem.MovieDescriptionHtml" class="form-control" aria-describedby="MovieDescriptionHtmlHelpBlock"></textarea>
                                    <div id="MovieDescriptionHtmlHelpBlock" class="form-text pb-2">
                                        <span>краткое содержание (HTML) - </span><span class="text-danger">обязательное поле</span>
                                    </div>
                                    <span asp-validation-for="MovieItem.MovieDescriptionHtml" class="text-danger"></span>

                                    <hr class="m-0 mb-2" />

                                    <label asp-for="MovieItem.FramesAroundMovie" class="form-label text-primary fs-5"></label>
                                    <input id="MovieFramesAroundMovieInput" asp-for="MovieItem.FramesAroundMovie" class="form-control" aria-describedby="MovieFramesAroundMovieHelpBlock" />
                                    <div id="MovieFramesAroundMovieHelpBlock" class="form-text pb-2">
                                        <span>название фильма для ленты кадров</span>
                                    </div>
                                    <span asp-validation-for="MovieItem.FramesAroundMovie" class="text-danger"></span>

                                    <hr class="m-0" />

                                    <label asp-for="MovieItem.MovieNote" class="form-label text-primary fs-5"></label>
                                    <textarea id="MovieNoteInput" rows="2" asp-for="MovieItem.MovieNote" class="form-control" aria-describedby="MovieNoteHelpBlock"></textarea>
                                    <div id="MovieNoteHelpBlock" class="form-text pb-2">
                                        <span>примечания</span>
                                    </div>
                                    <span asp-validation-for="MovieItem.MovieNote" class="text-danger"></span>

                                </div>

                            </div>

                        </div>

                        @* формат изображения *@
                        <div class="accordion-item mb-3 shadw">

                            @* заголовок группы *@
                            <h2 class="accordion-header" id="headingScreenFormat">
                                <button class="accordion-button collapsed py-0" type="button" data-bs-toggle="collapse" data-bs-target="#ScreenFormat" aria-expanded="true" aria-controls="ScreenFormat">
                                    <span class="form-label text-success fs-5">Формат изображения :</span>
                                </button>
                            </h2>

                            <div id="ScreenFormat" class="accordion-collapse collapse" aria-labelledby="headingScreenFormat" data-bs-parent="#accordionEditMovie">

                                <div class="accordion-body accordion-body-nointend text-center">

                                    @* формат изображения *@
                                    <div class="row g-2 justify-content-center">
                                        <div class="col-auto">
                                            <label asp-for="MovieItem.MovieScreenFormat" class="col-form-label text-primary fs-5"></label>
                                        </div>
                                        <div class="col-auto">
                                            <select id="ScreenFormatInput" asp-for="MovieItem.MovieScreenFormat" class="form-select" aria-describedby="ScreenFormatInputHelpBlock">
                                                <option value="">Формат</option>
                                                <option value="4X3">4x3</option>
