                @* Группы ссылок под видео *@
                <div class="accordion-item shadw">

                    <h2 class="accordion-header" id="headingAddLinks">

                        <button class="accordion-button collapsed py-0" type="button" data-bs-toggle="collapse" data-bs-target="#AddLinks" aria-expanded="true" aria-controls="AddLinks">
                            <span class="form-label text-success fs-5">Группы ссылок под видео :</span>
                        </button>

                    </h2>

                    <div id="AddLinks" class="accordion-collapse collapse" aria-labelledby="headingAddLinks" data-bs-parent="#accordionDetailsMovie">

                        <div class="accordion-body">

                            <div class="card-body mx-0 p-0">

                                <ul class="list-group list-group-flush text-center">

                                    @if (Model.MovieItem.Carousel)
                                    {
                                        <li class="list-group-item">
                                            <span class="fw-bold fs-5 text-primary">
