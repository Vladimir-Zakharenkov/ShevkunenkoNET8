@model DetailsMovieViewModel

@{
    int videoRef = 0;
}

<h1 class="fs-3 text_shadow">Информация о фильме</h1>

<hr class="liniya" />

<div class="row">

    @* Лента кадров слева *@
    @if (!string.IsNullOrEmpty(Model.MovieItem.FramesAroundMovie) == true)
    {
        <vc:movie-frames image-filter="@Model.MovieItem.FramesAroundMovie" left-side="true" one-frame="false" />
    }
    else
    {
        <vc:movie-frames image-filter="@Model.MovieItem.MovieCaption," left-side="true" one-frame="false" />
    }


    <div class="col-sm-12 col-md w-100 mb-3">

        @* Название фильма *@
        <h1 class="fs-5 lh-base">
            <span class="fw-bold text-danger">MovieFileName :</span>
            <br />
            <span class="fs-3 text_shadow">@Model.MovieItem.MovieCaption</span>
            <br />
            <span class="fs-6 form-text text-success px-2">
                название фильма в базе данных
            </span>
        </h1>

        <hr class="liniya" />

        @* Идентификатор в базе данных *@
        <h2 class="fs-5 lh-base">
            <span class="d-inline-block fw-bold text-danger mb-2">MovieFileModelId :</span>
            <br />
            <span class="text_shadow">@Model.MovieItem.MovieFileModelId</span>
            <br />
            <span class="fs-6 form-text text-success">
                идентификатор в базе данных (GUID)
            </span>
        </h2>

        @* Информация по разделам *@
        <div class="card w-100 mx-auto p-2">

            @* Изменить, удалить, смотреть *@
            <div class="card-footer p-0 my-2">

                @* Изменить *@
                <a class="btn btn-outline-success py-1 m-2 shadw"
                   asp-area="Admin"
                   asp-controller="MovieInfo"
                   asp-action="EditMovie"
                   asp-route-movieId="@Model.MovieItem.MovieFileModelId"
                   title="изменить данные">Изменить</a>

                @* Удалить *@
                <a class="btn btn-outline-danger py-1 m-2 shadw"
                   asp-area="Admin"
                   asp-controller="MovieInfo"
                   asp-action="DeleteMovie"
                   asp-route-movieId="@Model.MovieItem.MovieFileModelId"
                   title="удалить фильм">Удалить</a>

                @* Список фильмов сайта *@
                <a class="btn btn-outline-primary py-1 m-2 shadw"
                   asp-area="Admin"
                   asp-controller="MovieInfo"
                   asp-action="Index" title="список фильмов">Список</a>

                @* Страница фильма *@
                @if (Model.MovieItem.PageInfoModel != null)
                {
                    <a class="btn btn-outline-dark py-1 m-2 shadw"
                       asp-area="Admin"
                       asp-controller="PageInfo"
                       asp-action="DetailsPage"
                       asp-route-pageId="@Model.MovieItem.PageInfoModelId"
                       title="данные страницы фильма">Страница</a>

                    <a class="btn btn-outline-warning py-1 m-2 shadw"
                       href="@Url.Content(Model.MovieItem.PageInfoModel.PageFullPathWithData)"
                       title="страница фильма">Смотреть</a>
                }
                else
                {
                }

                @* Страница серий *@
                @if (Model.MovieItem.PageForMovieSeries != null)
                {
                    <a class="btn btn-outline-info py-1 m-2 shadw"
                       asp-area="Admin"
                       asp-controller="PageInfo"
                       asp-action="DetailsPage"
                       asp-route-pageId="@Model.MovieItem.PageForMovieSeriesId"
                       title="данные страницы серий">Страница серий</a>

                    <a class="btn btn-outline-success py-1 m-2 shadw"
                       href="@Url.Content(Model.MovieItem.PageForMovieSeries.PageFullPathWithData)"
                       title="серии фильма">Серии</a>
                }
                else
                {
                }

                @* Полная версия фильма *@
                @if (Model.MovieItem.FullMovie != null)
                {
                    <a class="btn btn-outline-success py-1 m-2 shadw"
                       asp-area="Admin"
                       asp-controller="PageInfo"
                       asp-action="DetailsPage"
                       asp-route-pageId="@Model.MovieItem.FullMovie.PageInfoModelId"
                       title="страница полной версии">Станица полной версии</a>

                    @if (Model.MovieItem.FullMovie.PageInfoModel != null)
                    {
                        <a class="btn btn-outline-primary py-1 m-2 shadw"
                           href="@Url.Content(Model.MovieItem.FullMovie.PageInfoModel.PageFullPathWithData)"
                           title="полная версия">Полный фильм</a>
                    }
                }

            </div>

            @* Разделы информации (accordion) *@
            <div class="accordion" id="accordionDetailsMovie">

                @* Файл фильма *@
                <div class="accordion-item mb-3 shadw">

                    @* заголовок группы «файл фильма» *@
                    <h2 class="accordion-header" id="headingFilmFile">
                        <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FilmFile" aria-expanded="true" aria-controls="FilmFile">
                            <span class="form-label fs-5">Файл фильма :</span>
                        </button>
                    </h2>

                    <div id="FilmFile" class="accordion-collapse collapse" aria-labelledby="headingFilmFile" data-bs-parent="#accordionDetailsMovie">

                        @* адрес файла на сайте *@
                        <div class="accordion-body accordion-body-nointend text-center">

                            @if (!string.IsNullOrEmpty(Model.MovieItem.MovieFileName))
                            {
                                <p class="fs-5 mb-0">
                                    <span class="fw-bold text-danger">MovieContentUrl :</span>
                                    <br />
                                    <span class="text_shadow">
                                        @Model.MovieItem.MovieContentUrl
                                    </span>
                                    <br />
                                    <span class="fs-6 form-text text-success px-2">
                                        адрес файла на сайте
                                    </span>
                                </p>
                            }
                            else
                            {
                                <p class="fs-5 mb-0">
                                    <span class="fw-bold text-danger">MovieContentUrl :</span>
                                    <br />
                                    <span class="text_shadow">
                                        файл фильма отсутствует
                                    </span>
                                    <br />
                                    <span class="fs-6 form-text text-success px-2">
                                        адрес файла на сайте
                                    </span>
                                </p>
                            }

                        </div>

                    </div>

                </div>

                @* Картинка фильма *@
                <div class="accordion-item mb-3 shadw">

                    @* заголовок группы «картинка фильма» *@
                    <h2 class="accordion-header" id="headingFilmImage">
                        <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FilmImage" aria-expanded="true" aria-controls="FilmImage">
                            <span class="form-label fs-5">Картинка фильма :</span>
                        </button>
                    </h2>

                    <div id="FilmImage" class="accordion-collapse collapse" aria-labelledby="headingFilmImage" data-bs-parent="#accordionDetailsMovie">

                        <div class="accordion-body accordion-body-nointend  text-center">

                            @if (Model.MovieItem.ImageFileModelId != null)
                            {
                                <p class="fs-5">
                                    <span class="fw-bold text-danger">LogoOfArticleId :</span>
                                    <br />
                                    <span class="text_shadow">@Model.MovieItem.ImageFileModelId</span>
                                </p>

                                <vc:view-image image-id="@Model.MovieItem.ImageFileModelId"
                                               css-class="card-img-top m-2 w-auto shadw"
                                               icon-type="webimage" />

                                @if (Model.MovieItem.ImageFileModel != null)
                                {
                                    @if (!string.IsNullOrEmpty(Model.MovieItem.ImageFileModel.WebImageFileName))
                                    {
                                        <p class="fs-5 mb-0 text_shadow">@Model.MovieItem.ImageFileModel.ImagePath/@Model.MovieItem.ImageFileModel.WebImageFileName</p>
                                    }
                                    else
                                    {
                                        <p class="fs-5 mb-0 text_shadow">@Model.MovieItem.ImageFileModel.ImagePath/@Model.MovieItem.ImageFileModel.ImageFileName</p>
                                    }
                                }

                                <a class="btn btn-outline-primary py-1 my-3 shadw"
                                   asp-area="Admin"
                                   asp-controller="ImageInfo"
                                   asp-action="DetailsImage"
                                   asp-route-imageId="@Model.MovieItem.ImageFileModelId"
                                   title="данные картинки">Картинка</a>

                                <p>
                                    <span class="fs-6 form-text text-success px-2">картинка для видео</span>
                                </p>
                            }
                            else
                            {
                                <p class="fs-5 text_shadow">Картинка для видео отсутствует</p>
                            }

                        </div>

                    </div>

                </div>

                @* Постер фильма *@
                <div class="accordion-item  mb-3 shadw">

                    @* заголовок группы «постер фильма» *@
                    <h2 class="accordion-header" id="headingFilmPoster">
                        <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FilmPoster" aria-expanded="true" aria-controls="FilmPoster">
                            <span class="form-label fs-5">Постер фильма :</span>
                        </button>
                    </h2>

                    <div id="FilmPoster" class="accordion-collapse collapse" aria-labelledby="headingFilmPoster" data-bs-parent="#accordionDetailsMovie">

                        <div class="accordion-body accordion-body-nointend  text-center">

                            @if (Model.MovieItem.MoviePoster != null)
                            {
                                <p class="fs-5">
                                    <span class="fw-bold text-danger">LogoOfArticleId :</span>
                                    <br />
                                    <span class="text_shadow">@Model.MovieItem.MoviePosterId</span>
                                </p>

                                <vc:view-image image-id="@Model.MovieItem.MoviePosterId"
                                               css-class="card-img-top m-2 w-75 shadw"
                                               icon-type="webimage" />

                                @if (!string.IsNullOrEmpty(Model.MovieItem.MoviePoster.WebImageFileName))
                                {
                                    <p class="fs-5 mb-0 text_shadow">@Model.MovieItem.MoviePoster.ImagePath/@Model.MovieItem.MoviePoster.WebImageFileName</p>
                                }
                                else
                                {
                                    <p class="fs-5 mb-0 text_shadow">@Model.MovieItem.MoviePoster.ImagePath/@Model.MovieItem.MoviePoster.ImageFileName</p>
                                }

                                <a class="btn btn-outline-primary py-1 my-3 shadw"
                                   asp-area="Admin"
                                   asp-controller="ImageInfo"
                                   asp-action="DetailsImage"
                                   asp-route-imageId="@Model.MovieItem.MoviePosterId"
                                   title="данные постера">Картинка</a>

                                <p>
                                    <span class="fs-6 form-text text-success px-2">постер для видео</span>
                                </p>
                            }
                            else
                            {
                                <p class="fs-5 text_shadow">Постер для видео отсутствует</p>
                            }

                        </div>

                    </div>

                </div>

                @* Многосерийный фильм *@
                <div class="@(Model.MovieItem.MovieTotalParts < 2 ? "d-none" : "accordion-item mb-3 shadw")">

                    @* заголовок группы «многосерийный фильм» *@
                    <h2 class="accordion-header" id="headingFilmSeries">
                        <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FilmSeries" aria-expanded="true" aria-controls="FilmSeries">
                            <span class="form-label fs-5">Многосерийный :</span>
                        </button>
                    </h2>

                    <div id="FilmSeries" class="accordion-collapse collapse" aria-labelledby="headingFilmSeries" data-bs-parent="#accordionDetailsMovie">

                        <div class="accordion-body accordion-body-nointend text-center">

                            <p class="fs-5 mb-0">
                                <span class="fw-bold text-danger">Количество серий:</span>
                                <span class="fw-bold text_shadow">@Model.MovieItem.MovieTotalParts</span>
                            </p>

                            <p class="fs-5 mb-0">
                                <span class="fw-bold text-danger">Серия:</span>
                                <span class="fw-bold text_shadow">@Model.MovieItem.MoviePart</span>
                            </p>

                            <hr class="w-50 mx-auto" />

                            <p class="@(string.IsNullOrEmpty(Model.MovieItem.SeriesSearchFilter) ? "d-none" : "fs-5 mb-0")">
                                <span class="fw-bold text-danger">Текст поиска серий:</span>
                                <span class="text_shadow">@Model.MovieItem.SeriesSearchFilter</span>
                            </p>
                            <p class="@(string.IsNullOrEmpty(Model.MovieItem.SeriesSearchFilter) ? "fs-5 mb-0" : "d-none")">
                                <span class="fw-bold text-danger">Текст поиска серий:</span>
                                <span class="text_shadow">не задан</span>
                            </p>

                            <hr class="w-50 mx-auto" />

                            @if (Model.MovieItem.MoviePart == 1 && Model.MovieItem.ImageForHeadSeries != null)
                            {
                                <p class="fs-5">
                                    <span class="fw-bold text-danger">LogoOfArticleId :</span>
                                    <br />
                                    <span class="text_shadow">@Model.MovieItem.ImageForHeadSeriesId</span>
                                </p>

                                <vc:view-image image-id="@Model.MovieItem.ImageForHeadSeriesId"
                                               css-class="card-img-top m-2 w-75 shadw"
                                               icon-type="webimage" />

                                @if (!string.IsNullOrEmpty(Model.MovieItem.ImageForHeadSeries.WebImageFileName))
                                {
                                    <p class="fs-5 mb-0 text_shadow">
                                        @Model.MovieItem.ImageForHeadSeries.ImagePath/@Model.MovieItem.ImageForHeadSeries.WebImageFileName
                                    </p>
                                }
                                else
                                {
                                    <p class="fs-5 mb-0 text_shadow">
                                        @Model.MovieItem.ImageForHeadSeries.ImagePath/@Model.MovieItem.ImageForHeadSeries.ImageFileName
                                    </p>
                                }

                                <a class="btn btn-outline-primary py-1 my-3 shadw"
                                   asp-area="Admin"
                                   asp-controller="ImageInfo"
                                   asp-action="DetailsImage"
                                   asp-route-imageId="@Model.MovieItem.ImageForHeadSeriesId"
                                   title="данные картинки">Картинка</a>

                                <p>
                                    <span class="fs-6 form-text text-success px-2">картинка для заголовка страницы серий</span>
                                </p>
                            }
                            else if (Model.MovieItem.MoviePart > 1)
                            {
                                <h2 class="fs-5 text_shadow">Картинка заголовка страницы серий связана с 1 серией</h2>
                            }
                            else
                            {
                                <h2 class="fs-5 text_shadow">Картинка заголовка страницы серий отсутствует</h2>
                            }

                            @if (Model.MovieItem.PageForMovieSeries != null)
                            {
                                <hr class="w-50 mx-auto" />

                                <p class="fs-5">
                                    <span class="fw-bold text-danger">Адрес страницы серий :</span>
                                </p>

                                <p class="fs-5 mb-0 text_shadow">
                                    <a class="link-dark" href="@Url.Content(Model.MovieItem.PageForMovieSeries.PageFullPathWithData)" title="серии фильма">
                                        @Model.MovieItem.PageForMovieSeries.PageFullPathWithData
                                    </a>
                                </p>
                            }

                        </div>

                    </div>

                </div>

                @* Описание, лента кадров *@
                <div class="accordion-item mb-3 shadw">

                    @* заголовок группы «описание, лента кадров» *@
                    <h2 class="accordion-header" id="headingDescription">
                        <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FilmDescription" aria-expanded="true" aria-controls="FilmDescription">
                            <span class="form-label fs-5">Описание, кадры :</span>
                        </button>
                    </h2>

                    <div id="FilmDescription" class="accordion-collapse collapse" aria-labelledby="headingDescription" data-bs-parent="#accordionDetailsMovie">

                        <div class="accordion-body accordion-body-nointend">

                            <div class="card-body mx-0 p-0">

                                <ul class="list-group list-group-flush text-center">

                                    @* Заголовок страницы *@
                                    <li class="list-group-item">
                                        <span class="d-none d-sm-inline fw-bold fs-5 text-danger">
                                            MovieCaptionForOnline&nbsp;:
                                        </span>
                                        <span class="d-sm-none fw-bold fs-6 text-danger">
                                            MovieCaptionForOnline&nbsp;:
                                        </span>
                                        <br />
                                        <span class="d-none d-sm-inline fs-5 text_shadow">
                                            @Html.Raw(Model.MovieItem.MovieCaptionForOnline)
                                        </span>
                                        <span class="d-sm-none fs-6 text_shadow">
                                            @Html.Raw(Model.MovieItem.MovieCaptionForOnline)
                                        </span>
                                        <br />
                                        <span class="d-none d-sm-inline fs-5">
                                            (@Model.MovieItem.MovieCaptionForOnline)
                                        </span>
                                        <span class="d-sm-none fs-6">
                                            (@Model.MovieItem.MovieCaptionForOnline)
                                        </span>
                                        <br />
                                        <span class="fs-6 form-text text-success px-2">
                                            заголовок страницы фильма (HTML)
                                        </span>
                                    </li>

                                    @* Краткое содержание *@
                                    <li class="list-group-item mt-0">
                                        <span class="d-none d-sm-inline fw-bold fs-5 text-danger">
                                            MovieDescriptionHtml&nbsp;:
                                        </span>
                                        <br class="d-none d-sm-inline" />
                                        <span class="d-sm-none fw-bold fs-6 text-danger">
                                            MovieDescriptionHtml&nbsp;:
                                        </span>

                                        <div class="border border-1 border-secondary p-2 justify my-2">
                                            @Html.Raw(Model.MovieItem.MovieDescriptionHtml)
                                        </div>

                                        <div class="border border-1 border-secondary p-2 mb-2 justify">
                                            <p class="text-center text-danger fw-bold fs-5">(HTML код)</p>
                                            @Model.MovieItem.MovieDescriptionHtml
                                        </div>

                                        <span class="fs-6 form-text text-success px-2">
                                            краткое содержание
                                        </span>
                                    </li>

                                    @* Лента кадров по FramesAroundMovie *@
                                    <li class="@(string.IsNullOrEmpty(Model.MovieItem.FramesAroundMovie) ? "d-none" : "list-group-item")">
                                        <span class="d-none d-sm-inline fw-bold fs-5 text-danger">
                                            FramesAroundMovie&nbsp;:
                                        </span>
                                        <span class="d-sm-none fw-bold fs-6 text-danger">
                                            FramesAroundMovie&nbsp;:
                                        </span>
                                        <br />
                                        <span class="fs-5 text_shadow">
                                            @Model.MovieItem.FramesAroundMovie
                                        </span>
                                        <br />
                                        <span class="fs-6 form-text text-success px-2">
                                            фильм для ленты кадров
                                        </span>
                                    </li>

                                    @* Лента кадров по MovieCaption *@
                                    <li class="@(string.IsNullOrEmpty(Model.MovieItem.FramesAroundMovie) ? "list-group-item" : "d-none")">
                                        <span class="d-none d-sm-inline fw-bold fs-5 text-danger">
                                            FramesAroundMovie&nbsp;:
                                        </span>
                                        <span class="d-sm-none fw-bold fs-6 text-danger">
                                            FramesAroundMovie&nbsp;:
                                        </span>
                                        <br />
                                        <span class="fs-5 text_shadow">
                                            @Model.MovieItem.MovieCaption
                                        </span>
                                        <br />
                                        <span class="fs-6 form-text text-success px-2">
                                            кадры по MovieCaption
                                        </span>
                                    </li>

                                    @* Примечания к фильму *@
                                    <li class="@(string.IsNullOrEmpty(Model.MovieItem.MovieNote) ? "d-none" : "list-group-item")">
                                        <span class="fw-bold fs-5 text-danger">
                                            MovieNote&nbsp;:
                                        </span>
                                        <br />
                                        <span class="fs-6">
                                            @Model.MovieItem.MovieNote
                                        </span>
                                        <br />
                                        <span class="fs-6 form-text text-success px-2">
                                            примечания к фильму
                                        </span>
                                    </li>

                                    @* Примечания к фильму отсутствуют *@
                                    <li class="@(string.IsNullOrEmpty(Model.MovieItem.MovieNote) ? "list-group-item" : "d-none")">
                                        <span class="fw-bold fs-5 text-danger">
                                            MovieNote&nbsp;:
                                        </span>
                                        <br />
                                        <span class="fs-6 form-text text-success px-2">
                                            примечания не заданы
                                        </span>
                                    </li>

                                </ul>

                            </div>

                        </div>

                    </div>

                </div>

                @* Размер кадра *@
                <div class="@((Model.MovieItem.MovieWidth == 0 && Model.MovieItem.MovieHeight == 0) ? "d-none" : "accordion-item mb-3 shadw")">

                    @* заголовок группы «размер кадра» *@
                    <h2 class="accordion-header" id="headingWidthHeight">
                        <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#WidthHeight" aria-expanded="true" aria-controls="WidthHeight">
                            <span class="form-label fs-5">Размер кадра :</span>
                        </button>
                    </h2>

                    <div id="WidthHeight" class="accordion-collapse collapse" aria-labelledby="headingWidthHeight" data-bs-parent="#accordionDetailsMovie">

                        <div class="accordion-body accordion-body-nointend  text-center">

                            <ul class="list-group list-group-flush text-center">

                                @* Размер кадра *@
                                <li class="list-group-item">
                                    <span class="fw-bold fs-5 text-danger">
                                        MovieWidth x MovieHeight&nbsp;:
                                    </span>
                                    <br />
                                    <span class="fs-5 text_shadow">
                                        @Model.MovieItem.MovieWidth px x @Model.MovieItem.MovieHeight px
                                    </span>
                                    <br />
                                    <span class="fs-6 form-text text-success px-2">
                                        размер кадра фильма
                                    </span>
                                </li>

                            </ul>

                        </div>

                    </div>

                </div>

                @* Размер файла фильма *@
                <div class="@(Model.MovieItem.MovieFileSize > 0 ? "accordion-item mb-3 shadw" : "d-none")">

                    @* заголовок группы «размер файла фильма» *@
                    <h2 class="accordion-header" id="headingFileSize">
                        <button class="accordion-button collapsed py-0 stranicy" type="button" data-bs-toggle="collapse" data-bs-target="#FileSize" aria-expanded="true" aria-controls="FileSize">
                            <span class="form-label fs-5">Размер файла фильма :</span>
                        </button>
                    </h2>

                    <div id="FileSize" class="accordion-collapse collapse" aria-labelledby="headingFileSize" data-bs-parent="#accordionDetailsMovie">

                        <div class="accordion-body accordion-body-nointend  text-center">

                            <ul class="list-group list-group-flush text-center">

                                @* Размер файла фильма *@
                                <li class="list-group-item">
                                    <span class="fw-bold fs-5 text-danger">
                                        MovieFileSize&nbsp;:
                                    </span>
                                    <br />
                                    <span class="fs-5 text_shadow">
                                        @Model.MovieItem.MovieFileSize.ToString("#,#") байт
                                    </span>
                                    <br />
                                    <span class="fs-6 form-text text-success px-2">
                                        размер файла фильма
                                    </span>
                                </li>

                            </ul>

                        </div>

                    </div>

                </div>

                @* Продолжительность фильма *@
                <div class="@(Model.MovieItem.MovieDuration.Seconds != 0 ? "accordion-item mb-3 shadw" : "d-none")">

                    @* заголовок группы «продолжительность» *@
