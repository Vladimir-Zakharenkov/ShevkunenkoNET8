@page
@model LoginModel

@{
    var retUrl = HttpContext.Request.Query["ReturnUrl"].ToString();

    if (string.IsNullOrEmpty(retUrl))
    {
        retUrl = "/Admin";
    }
}

<h1 class="text_shadow">Доступ к базе сайта</h1>

<hr class="liniya my-4 mx-auto maxwidth600px" />

<div class="row">

    <form class="col col-sm-6 col-lg-4 col-xl-3 d-block mx-auto px-2" method="post" role="form" asp-page-handler="OnPostAsync" asp-route-returnurl="@retUrl">

        <label for="locInput" class="form-label text-primary fs-5" asp-for="Access.Email"></label>
        <input id="locInput" class="form-control" asp-for="Access.Email" />
        <span asp-validation-for="Access.Email" class="text-danger"></span>

        <label class="form-label text-primary fs-5 mt-4" for="lastmodInput" asp-for="Access.Password"></label>
        <input id="lastmodInput" class="form-control" asp-for="Access.Password" />
        <span asp-validation-for="Access.Password" class="text-danger"></span>

        <hr class="liniya my-4" />

        <div class="text-center">

            <button type="submit" class="col btn btn-outline-success shadw">Войти</button>
            <a asp-page="/Index" asp-area="" class="col btn btn-outline-danger ms-3 shadw">Отмена</a>

        </div>

    </form>

</div>