@model List<List<PageInfoModel>>

@if (Model.Count > 0)
{
    foreach (var listOfPageLinks in Model)
    {
        if (listOfPageLinks.Count > 0)
        {
            if (listOfPageLinks.Count < 4)
            {
                <div class="row row-cols-3 justify-content-center mt-3">

                    <hr class="liniya" />

                    @foreach (var item in listOfPageLinks)
                    {
                        <vc:card-of-page page="@item" />
                    }

                </div>
            }
            else if (listOfPageLinks.Count % 4 == 0 || listOfPageLinks.Count == 7)
            {
                <div class="row row-cols-4 g-sm-2 justify-content-center mt-3">

                    <hr class="liniya" />

                    @foreach (var item in listOfPageLinks)
                    {
                        <vc:card-of-page page="@item" />
                    }

                </div>
            }
            else
            {
                <div class="row row-cols-3 row-cols-lg-4 row-cols-xxl-5 g-sm-2 justify-content-center mt-3">

                    <hr class="liniya" />

                    @foreach (var item in listOfPageLinks)
                    {
                        <vc:card-of-page page="@item" />
                    }

                </div>
            }
        }
    }
}
