@model PageInfoModel

@{
    string sitePath = "https://" + Context.Request.Host + Context.Request.Path.ToString().TrimEnd('/');
    string cssOfRef = "rounded-3 p-0 p-md-1";
}

<div class="col p-1 p-lg-2">

    <div class="card shadw rounded-3 cardborder" title="@Model.PageTitle">

        @if (Context.Request.Path.ToString().Contains("details")
        || Context.Request.Path.ToString().Contains("update")
        || Context.Request.Path.ToString().Contains("editpage")
        || Context.Request.Path.ToString().Contains("detailspage")
        || Context.Request.Path.ToString().Contains("editmovie")
        || Context.Request.Path.ToString().Contains("detailsmovie"))
        {
            <a asp-area="Admin"
               asp-controller="PageInfo"
               asp-action="DetailsPage"
               asp-route-pageId="@Model.PageInfoModelId"
               class="@cssOfRef"
               title="информация о странице">

                @if (Model.OgType == "movie" && Model.MovieFile != null && Model.MovieFile.ImageFileModel != null)
