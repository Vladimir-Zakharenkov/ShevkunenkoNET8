@model ImageFileModel[]

@{
    int i = 1;
}

<div class="row">

    <div class="col">

        <div id="carouselExampleSlidesOnly" class="carousel slide shadw" data-bs-ride="carousel">

            <div class="carousel-inner">

                @foreach (var picture in Model ?? Enumerable.Empty<ImageFileModel>())
                {
                    @if (i == 1)
                    {
                        <div class="carousel-item active shadw">

                            <vc:view-image image-id=@picture.ImageFileModelId css-class="d-block w-100 shadw" icon-type="webicon300" />

                        </div>

                        i++;
                    }
                    else
                    {
                        <div class="carousel-item shadw">

                            <vc:view-image image-id=@picture.ImageFileModelId css-class="d-block w-100 shadw" icon-type="webicon300" />

                        </div>
                    }
                }

            </div>

        </div>

    </div>

</div>